{% extends 'base.html.twig' %}

{% block title "Émission : " ~ emission.titre %}

{% block body %}
<h1>{{ emission.titre }}</h1>

    <p>
        {{ emission.categorie.titre }} - {{ emission.datepub|date('d-m-Y') }}
    </p>
    <p>
        {{ emission.descriptif }}
    </p>
    <p>
        <a href="{{ emission.url }}">
            Écoutez l'émission
        </a>
    </p>
<h2>{{ emission.categorie.titre }}</h2>

    <p>
        {{ emission.descriptif }}
    </p>

{% endblock %}