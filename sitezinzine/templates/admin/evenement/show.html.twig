{% extends 'admin/admin.html.twig' %}
{% block title "√âv√®nement : " ~ evenement.titre %}
{% block body %}

<style>

.evenement-container {
    max-width: 800px;
    margin: 40px auto;
    padding: 20px;
    border-radius: 10px;
    background-color: #f9f9f9;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    font-family: Arial, sans-serif;
}
.evenement-container img {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
}

.evenement-image {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
}

.evenement-titre {
    text-align: center;
    color: black;
    font-family: "Montserrat Alternates", sans-serif;
    font-weight: 900;
    font-style: normal;
    font-size: clamp(24px, 5vw, 36pt);
    margin: 20px auto;
}

.evenement-infos {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
    color: black;
}

.evenement-col {
    width: 48%;
}

.evenement-section {
    margin-top: 20px;
    padding-top: 10px;
    border-top: 2px solid #ddd;
}

.evenement-section h3 {
    font-size: 20px;
    color: #444;
}

.evenement-actions {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 30px;
}

.btn {
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    text-align: center;
    background-color: #007bff;
    color: white;
    font-size: 16px;
    cursor: pointer;
    border: none;
}

.btn-danger {
    background-color: #dc3545;
}

.btn:hover {
    opacity: 0.9;
}
.btn-secondary {
    background-color: #6c757d;
    transition: background-color 0.3s ease;
}

.btn-secondary:hover {
    background-color: #5a6268;
    opacity: 0.9;
}

    /* Styles pour la modal */
.evenement-container img {
    cursor: zoom-in;
    transition: transform 0.3s ease;
}

.evenement-container img:hover {
    transform: scale(1.02);
}
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
}

.modal-content {
    max-width: 90%;
    max-height: 90vh;
    margin: auto;
    display: block;
    cursor: pointer;
    transform: scale(0.9);
    transition: transform 0.3s ease;
}

.modal.active {
    display: flex;
    opacity: 1;
    pointer-events: auto;
}

.close {
    position: absolute;
    top: 15px;
    right: 35px;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    transition: color 0.3s ease;
}
.close:hover {
    color: #E40039;
}
.modal.active .modal-content {
    transform: scale(1);
}

    /* Rendre l'image cliquable */
    .evenement-container img {
        cursor: pointer;
    }
/* üì± Responsive Design */
@media (max-width: 768px) {
    .evenement-details {
        flex-direction: column;
        align-items: center;
    }

    .evenement-thumbnail img {
        max-width: 100%;
    }

    .evenement-info {
        text-align: center;
    }
}


    </style>
    <div>

<div class="evenement-container">

{% if evenement.thumbnail %}
    <img src="{{ vich_uploader_asset(evenement, 'thumbnailFile') }}" 
         alt="Photo de {{ evenement.titre }}"
         onclick="openModal(this.src)">
{% endif %}
    
    <h1 class="evenement-titre">{{ evenement.titre }}</h1>

    <div class="evenement-infos">
        <div class="evenement-col">
            <p><strong>Organisateur :</strong> {{ evenement.organisateur }}</p>
            <p><strong>Lieu :</strong> {{ evenement.ville }} ({{ evenement.departement }})</p>
            <p><strong>Adresse :</strong> {{ evenement.adresse }}</p>
        </div>
        <div class="evenement-col">
            <p><strong>Date :</strong> Du {{ evenement.dateDebut|date('d/m/Y') }} au {{ evenement.dateFin|date('d/m/Y') }}</p>
            <p><strong>Horaires :</strong> {{ evenement.horaire }}</p>
            <p><strong>Prix :</strong> {{ evenement.prix }}</p>
        </div>
    </div>

    <div class="evenement-section">
        <h3>Pr√©sentation</h3>
        <p>{{ evenement.presentation| raw }}</p>
    </div>

    <div class="evenement-section">
        <h3>Informations suppl√©mentaires</h3>
        <p><strong>Type :</strong> {{ evenement.type }}</p>
        
    </div>

    <div class="evenement-section">
        <h3>Contact</h3>
        <p><strong>Email/T√©l√©phone :</strong> {{ evenement.contact }}</p>
    </div>

    <div class="evenement-actions">
<a href="{{ path('admin.evenement.index') }}" class="btn btn-secondary">Retour</a>
        <a href="{{ path('admin.evenement.edit', {id: evenement.id}) }}" data-controller="return"
    data-return-url-value="{{ path('admin.evenement.edit', { id: evenement.id }) }}"
    data-action="click->return#redirectWithReturnTo" class="btn">Modifier</a>
        <form action="{{ path('admin.evenement.softDelete', {id: evenement.id}) }}" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
    </div>
</div>
<div id="imageModal" class="modal">
    <span class="close" onclick="closeModal()">&times;</span>
    <img class="modal-content" id="modalImage">
</div>
    </div>

    <script>
        function openModal(imgSrc) {
            const modal = document.getElementById('imageModal');
            const modalImg = document.getElementById('modalImage');
            modal.classList.add('active');
            modalImg.src = imgSrc;
        }
    
        function closeModal() {
            const modal = document.getElementById('imageModal');
            modal.classList.remove('active');
        }
    
        // Fermer la modal en cliquant en dehors de l'image
        document.getElementById('imageModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });
    
        // Fermer la modal avec la touche Echap
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
  
            {% endblock %}
            