{% extends 'admin/admin.html.twig' %}

{% block title %}
    Toutes les émissions !
{% endblock %}

{% block body %}

<style>
    
    .bodyadminemission {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        margin: 0%;
        padding: 0%;
        display: flex;
        flex-direction: column;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 500;
        font-style: normal;
        }
    .top img{
        width: 100%;
    }

    .table {
        width: 70%;
        margin: 20px auto 20px;
        background-color: black;
        }

    thead {
        text-align: center;
        
    }

    tr {
        display: flex;
        padding: 10px;
        color: white;
        justify-content: space-between;
        }

    tr:nth-child(even){
        background-color: #454545
        }

    th {
        background-color: #04AA6D;
        color: white;
        
    }

    td {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: auto;
    }


    .table img {
        width: 150px;
        height: 150px;
        border-radius: 3px;           
    }

    .img {
        padding: 10px;
    }

    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
    }

    a:hover {
        padding: 14px 16px;
        color: #E40039;
        text-decoration: none;
        font-weight: 800; 
    }

    .texte {
        width: fit-content;
        color: white;
        margin: 20px;
    }
    
    .titre {
        padding: 10px;
    }
    
    .date {
        padding: 10px;
    }

    .cat {
        padding: 10px;
    }

    .descriptif {
        padding: 10px;
    }

    .url {
        text-align: right;
        padding: 10px;
    }

    .ecoute img {
        width: 40px;
        height: 40px;
        align-content: right;
    }

    .create {
        margin: auto;
        padding: 20px;
    }

    .btn-create-emission {
        text-decoration: none;
        padding: 5px;
        font-size: 1.2em;
        color: #000000;
        background-color: #ffffff;
        border-radius: 26px;
        -webkit-border-radius: 26px;
        -moz-border-radius: 26px;
        border: 4px solid black;
        box-shadow: 3px 7px 13px #444444;
        -webkit-box-shadow: 3px 7px 13px #444444;
        -moz-box-shadow: 3px 7px 13px #444444;
    }

    .btn-create-emission:hover {
        padding: 5px;
        background-color: #E40039;
        color: #000000;
        border-radius: 24px;
        -webkit-border-radius: 24px;
        -moz-border-radius: 24px;
        box-shadow: 3px 7px 13px #777777;
        -webkit-box-shadow: 3px 7px 13px #777777;
        -moz-box-shadow: 3px 7px 13px #777777;
    }

    .pagination {
        background-color: transparent;
        margin: auto;
        padding: 10px;
    }

    .pagination a:hover {
        padding: 14px 16px;
        color: grey;
        text-decoration: none;
        font-weight: 800;
    }


</style>
<div class="bodyadminemission">
<div class="top">
            <img src="{{ asset('/images/bottom-header.gif') }}" alt=""></div>
    <p class="create">
        <a class="btn-create-emission" href="{{ path('admin.emission.create') }}">
        
            Créer une nouvelle émission
      
        </a>
    </p>

    <div class="pagination">
    {{ knp_pagination_render(emissions) }}
    </div>
    <table class="table">
    <thead>
        <tr>
            <th>
               
            </th>
            
            <th style="width: 200px">
            Actions
        </th>
        
    </tr>
</thead>
<tbody>
    {% for emission in emissions %}
    
                    <tr>
                        <td>
                            <div class="img">
                            
                                {% if emission.thumbnail %}
                                    <img src="{{ vich_uploader_asset(emission, 'thumbnailFile') }}" alt="Photo de {{ emission.titre }}">
                                 {% elseif  emission.categorie.thumbnail %}
                                <img src="{{ vich_uploader_asset(emission.categorie, 'thumbnailFile', 'App\\Entity\\Categories') }}" alt="Photo de {{ emission.titre }}">
                                {# {% elseif  emission.theme.thumbnail %}
                                                <img src="{{ vich_uploader_asset(emission.theme, 'thumbnailFile', 'App\\Entity\\Theme') }}" alt="Photo de {{ emission.titre }}">
                                                
                             #}{% endif %}
                        </div>
                        <div class="texte">
                        <div class="titre">
                              <a href="{{ path('admin.emission.show', {id: emission.id }) }}">
                                {{ emission.titre }}
                            </a>
                        </div>
                        <div class="cat">
                            
                                {{ emission.categorie.titre }}
                               
                            
                        </div>
                        <div class="descriptif">
                        <p>
                            {{ emission.descriptif | raw}}
                        </p>
                        </div>
                            </div>
                            <div class='ecoute'>
                                    <a href="{{ emission.url }}">
                                        Écoutez l'émission
                                    </a>
                            </div>
                            <p>
                                {{ emission.datepub|date('d-m-Y') }}
                            </p>
                            </td>

                            <td>
                                <div class="d-flex gap-1">
                                    <a class="btn btn-primary btn-sm" href="{{ path('admin.emission.edit', {id: emission.id}) }}">
                                        Éditer
                                    </a>
                                    <form action="{{ path('admin.emission.delete', {id: emission.id}) }}" method="post">
                                        <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        
                        {% endfor %}
                    </tbody>
                </table>
                <div class="pagination">
                {{ knp_pagination_render(emissions) }}
                </div>
        {% endblock %}
        