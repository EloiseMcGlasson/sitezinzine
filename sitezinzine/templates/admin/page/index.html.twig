{% extends 'admin/admin.html.twig' %}

{% block title %}Gestion des pages{% endblock %}

{% block body %}

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin: 0 auto;
  }

  .table-responsive {
    width: 80%;
    overflow-x: auto;
    margin: 1rem 0;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin: 0;
    padding: 0;
  }

  th, td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #ddd;
    vertical-align: middle;
  }

  th {
    background-color: black;
    color: white;
    font-weight: bold;
  }

  tr:nth-child(even) { background-color: #f9f9f9; }
  tr:hover { background-color: #f5f5f5; }

  .btn-create {
    align-self: flex-start;
    margin: 1rem 0;
    margin-left: 10%;
    display: inline-block;
    padding: 0.6rem 1.1rem;
    background-color: white;
    color: black;
    text-decoration: none;
    border: 2px solid black;
    border-radius: 26px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .btn-create:hover {
    background-color: #E40039;
    color: white;
    border-color: #E40039;
  }

  .btn-edit {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: white;
    color: black;
    text-decoration: none;
    border: 2px solid black;
    border-radius: 26px;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .btn-edit:hover {
    background-color: #E40039;
    color: white;
    border-color: #E40039;
  }

  .alert-success {
    width: 80%;
    margin: 0.5rem 0;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    background: #e9f7ef;
    color: #1e6b3a;
    border: 1px solid #bfe8cf;
  }

  @media (max-width: 768px) {
    .container { width: 100%; padding: 0 0.5rem; }
    .table-responsive { width: 100%; }
    th, td { padding: 0.5rem; }
    .btn-edit { padding: 0.3rem 0.6rem; font-size: 0.8rem; }
    .btn-create { margin-left: 0; }
    .alert-success { width: 100%; }
  }
</style>

<div class="container">
  <h1>Pages éditables</h1>

 {#  <a href="{{ path('admin.page.create') }}" class="btn-create">
    + Créer une nouvelle page
  </a> #}

  {% for message in app.flashes('success') %}
    <div class="alert-success">{{ message }}</div>
  {% endfor %}

  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Slug</th>
          <th>Titre</th>
          <th>Dernière mise à jour</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for page in pages %}
          <tr>
            <td>{{ page.id }}</td>
            <td><code>{{ page.slug }}</code></td>
            <td>{{ page.title }}</td>
            <td>{{ page.updatedAt ? page.updatedAt|date('d/m/Y H:i') : '—' }}</td>
            <td>
              <a href="{{ path('admin.page.edit', {id: page.id}) }}" class="btn-edit">
                Éditer
              </a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5">Aucune page pour le moment.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% endblock %}
