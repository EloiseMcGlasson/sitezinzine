<style>
    nav {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Montserrat Alternates", sans-serif;
        font-size: 1.6em;
        background-color: white;
    }

    nav ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    nav li {
        position: relative;
    }

    nav a, nav .dropbtn {
        padding: 14px 16px;
        color: #1C1C1A;
        text-decoration: none;
        font-weight: 800;
        background: none;
        border: none;
        cursor: pointer;
        font-family: inherit;
        font-size: 1em;
    }

    nav a:hover, nav .dropbtn:hover {
        color: #E40039;
    }

    

    nav .dropdown-content {
        display: none;
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        background-color: white;
        min-width: 220px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        flex-direction: column;
        text-align: left;
    }

    nav .dropdown-content a {
        padding: 10px 16px;
        display: block;
        color: #1C1C1A;
        font-weight: normal;
    }

    nav .dropdown-content a:hover {
        background-color: #f0f0f0;
    }

    nav .dropdown:hover .dropdown-content {
        display: flex;
    }
</style>
<nav>
    <img src="{{ asset('/images/logo.gif') }}" alt="Logo">
    <ul>
        <li>
            <a class="nav-link {{ app.current_route == 'admin.' ? 'active' : '' }}" href="{{ path('admin.index') }}">
                Accueil
            </a>
        </li>

        <li><img src="{{ asset('/images/puce-rond-rouge.gif') }}"></li>

        <li class="dropdown">
            <button class="dropbtn">Gestion des émissions</button>
            <div class="dropdown-content">
                <a class="nav-link {{ app.current_route starts with 'admin.emission.' ? 'active' : '' }}" href="{{ path('admin.emission.index') }}">
                    Émissions
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="nav-link {{ app.current_route starts with 'admin.categorie.' ? 'active' : '' }}" href="{{ path('admin.categorie.index') }}">
                        Catégories
                    </a>
                    <a class="nav-link {{ app.current_route starts with 'admin.theme.' ? 'active' : '' }}" href="{{ path('admin.theme.index') }}">
                        Thèmes
                    </a>
                    <a class="nav-link {{ app.current_route starts with 'admin.editeur.' ? 'active' : '' }}" href="{{ path('admin.editeur.index') }}">
                        Éditeurs
                    </a>
                    <a class="nav-link {{ app.current_route starts with 'admin.InviteOldAnimateur.' ? 'active' : '' }}" href="{{ path('admin.InviteOldAnimateur.index') }}">
                        Invité/animateur
                    </a>
                {% endif %}
            </div>
        </li>

        {% if is_granted('ROLE_EDITOR') %}
            <li><img src="{{ asset('/images/puce-rond-rouge.gif') }}"></li>
            <li>
                <a class="nav-link {{ app.current_route starts with 'admin.annonce.' ? 'active' : '' }}" href="{{ path('admin.annonce.index') }}">
                    Annonces
                </a>
            </li>
            <li><img src="{{ asset('/images/puce-rond-rouge.gif') }}"></li>
            <li>
                <a class="nav-link {{ app.current_route starts with 'admin.evenement.' ? 'active' : '' }}" href="{{ path('admin.evenement.index') }}">
                    Évènements
                </a>
            </li>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <li><img src="{{ asset('/images/puce-rond-rouge.gif') }}"></li>
            <li>
                <a class="nav-link {{ app.current_route starts with 'admin.user.' ? 'active' : '' }}" href="{{ path('admin.user.index') }}">
                    Utilisateurices
                </a>
            </li>
        {% endif %}
    </ul>
</nav>
