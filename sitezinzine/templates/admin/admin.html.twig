<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Administration
            {% endblock %}
        </title>
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        #} {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <style>
   
        ul {
          
            list-style-type: none;
            margin: 0;
            padding: 0;
            background-color: white;
            overflow: hidden;
        }
    
        li {
            text-align: center;
            display: inline;
            vertical-align: middle;
        }
            
        li a {
                padding: 14px 16px;
                color: #1C1C1A;
                text-decoration: none;
                font-weight: 800;
                
        }
    
       
        
    
        nav {
            width: 100%;
            display: flex;
            padding: 1rem;
            text-align: center;
            align-items: center;
            font-family: "Montserrat Alternates", sans-serif;
            font-size: 21pt;
            
            justify-content: space-between;
          
        
        }
       
    
    
    
    
        @media (min-width: 1200px) {
    
        }
    
    </style>
    <body>
        <nav >
            <div >
                
                    <h1>Administration</h1>
                
                <div>
                    <ul >
                        <li >
                            <a class="nav-link {{ app.current_route == 'home' ? 'active' : '' }}" href="{{ path('home') }}">
                                Accueil
                            </a>
                        </li>
                        <li>
                            <a class="nav-link {{ app.current_route starts with 'admin.emission.' ? 'active' : '' }}" href="{{ path('admin.emission.index') }}">
                                Émissions
                            </a>
                        </li>
                        <li>
                            <a class="nav-link {{ app.current_route starts with 'admin.categorie.' ? 'active' : '' }}" href="{{ path('admin.categorie.index') }}">
                                Catégories
                            </a>
                        </li>
                        <li>
                            <a class="nav-link {{ app.current_route starts with 'admin.theme.' ? 'active' : '' }}" href="{{ path('admin.theme.index') }}">
                                Thèmes
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class=" container my-4">
            {% include 'partials/flash.html.twig' %}

            {% block body %}{% endblock %}

        </div>
    </body>
</html>
