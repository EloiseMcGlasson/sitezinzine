{% extends 'admin/admin.html.twig' %}

{% block title %}Gestion des utilisateurs¬∑rices{% endblock %}

{% block body %}

<style>

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        margin: 0 auto;
      
    }


    .table-responsive {
        width: 80%;
        overflow-x: auto;
        margin: 1rem 0;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        padding: 0;
    }

    th, td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: black;
        color: white;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .btn-edit {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: white;
        color: black;
        text-decoration: none;
        border: 2px solid black;
        border-radius: 26px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-edit:hover {
        background-color: #E40039;
        color: white;
        border-color: #E40039;
    }

    @media (max-width: 768px) {
        .container {
            width: 100%;
            padding: 0 0.5rem;
        }

        th, td {
            padding: 0.5rem;
        }

        .btn-edit {
            padding: 0.3rem 0.6rem;
            font-size: 0.8rem;
        }
    }
</style>
<div class="container">
    <h1>Gestion des utilisateurices</h1>
    
    <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom d'utilisateurice</th>
                    <th>Email</th>
                    <th>R√¥les</th>
                    <th>Actions</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                {{ available_roles[role]|default(role) }}
                                {% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                    <td>
                        <a href="{{ path('admin.user.edit', {id: user.id}) }}" 
                           class="btn-edit">
                            √âditer
                        </a>
                    </td>
                    <td>
                            <form method="post" action="{{ path('admin.user.delete', {id: user.id}) }}" onsubmit="return confirm('Confirmer la suppression de ce compte ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete-user-' ~ user.id) }}">
                                <button class="btn-delete">üóëÔ∏è</button>
                            </form>
                        </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}