{% extends 'admin/admin.html.twig' %}

{% block title %}
    Tout les invités !
{% endblock %}

{% block body %}
    <style>

    .InviteOldAnimateur {
        background-color: black;
        color: white;
        display: grid;
        margin: 40px 80px;
        align-items: center; 
        }
        
       section {
        border: solid;
        display: grid;
        border-collapse: collapse;
        grid-template-columns: 1fr 4fr 0.5fr 0.5fr;
    }
   
    .col1 {
     
        width: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
       
       
    }
    .col1 img {
        width: 150px;
        margin: 10px;
    }
    .col2 {
     
    }
    .col3 {
     
        display: flex;
        align-items: center;
        justify-content: center;
     
    }
    .col4 {
        display: flex;
        align-items: center;
        justify-content: center;
     
    }
 
    .img {
        padding: 10px;
    }

    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
    }

    a:hover {
        padding: 14px 16px;
        color: #E40039;
        text-decoration: none;
        font-weight: 800; 
    }

    
    .titre {
        margin: 10px;
    }
  

    .create {
        margin: 20px;
        padding: 20px;
    }
   
    </style>
    <div>
     

            <p class="create">
                <a class="btn-create" href="{{ path('admin.InviteOldAnimateur.create') }}">
                    Créer un nouveau invité ou ancien·ne animateurice
                </a>
            </p>
           
            
            <article>
            <div class="InviteOldAnimateur">

                    {% for InviteOldAnimateur in InviteOldAnimateurs %}

                        <section>
               
                        <div class="col2">
                                <div class="titre">
                                    <a href="{{ path('admin.InviteOldAnimateur.show', {id: InviteOldAnimateur.id }) }}">
                                        {{ InviteOldAnimateur.lastName }} {{ InviteOldAnimateur.firstName }}
                                     {% if InviteOldAnimateur.ancienanimateur %} Ancien·ne animateurice {% endif %}


                                    </a>
                                </div>
                                
                        </div>
                       
                            
                        <div class="col4">

                                <a class="btn btn-primary btn-sm" href="{{ path('admin.InviteOldAnimateur.edit', {id: InviteOldAnimateur.id}) }}">
                                    Éditer
                                </a>
                            {# <form action="{{ path('admin.InviteOldAnimateur.delete', {id: InviteOldAnimateur.id}) }}" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm">
                                Supprimer
                                </button>
                            </form> #}
                        </div>
                      
                    </section>
                         
                        {% endfor %}
                    </div>

                </article>
              
            {% endblock %}
            