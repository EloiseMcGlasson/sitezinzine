{% extends 'admin/admin.html.twig' %}
{% block title 'Créer un invité·e ou un·e ancien·ne animateur·rice' %}

{% block body %}
<style>
/* scope strict */
.main-content .invite-form,
.main-content .invite-form *{
  box-sizing: border-box;
}

/* card blanche */
.main-content .invite-form{
  font-family: "Montserrat Alternates", sans-serif;
  max-width: 1080px;
  margin: 18px auto 28px;
  padding: 16px 16px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 6px 18px rgba(0,0,0,0.08);
  color: #1C1C1A;
}

/* titre */
.main-content .invite-form h1{
  margin: 0 0 12px 0;
  text-align: center;
  color: #E4013A;
  font-family: "Montserrat Alternates", sans-serif;
  font-weight: 900;
  font-size: 22px;
  line-height: 1.2;
  overflow-wrap: anywhere;
}

.main-content .invite-form form{
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* grilles compactes */
.main-content .invite-form .grid{
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
  width: 100%;
}

.main-content .invite-form .field{
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.main-content .invite-form label{
  margin: 0 0 6px 0;
  font-weight: 800;
  color: #333;
  font-size: 14px;
}

.main-content .invite-form input[type="text"],
.main-content .invite-form input[type="email"],
.main-content .invite-form input[type="tel"],
.main-content .invite-form select{
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 15px;
  background: #fff;
}

.main-content .invite-form input:focus,
.main-content .invite-form select:focus{
  outline: none;
  border-color: #E4013A;
  box-shadow: 0 0 0 3px rgba(228, 1, 58, 0.15);
}

/* erreurs Symfony */
.main-content .invite-form .field ul{
  margin: 6px 0 0 0;
  padding-left: 18px;
  color: #b30021;
  font-weight: 700;
  font-size: 13px;
}

/* checkbox */
.main-content .invite-form .checkline{
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 10px 12px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background: #fafafa;
}

.main-content .invite-form .checkline input[type="checkbox"]{
  width: 18px;
  height: 18px;
  margin: 0;
  accent-color: #E4013A;
}

/* submit (même style que catégorie) */
.main-content .invite-form button,
.main-content .invite-form input[type="submit"]{
  width: 100%;
  padding: 12px 14px;
  border: 0;
  border-radius: 26px;
  background: #E4013A;
  color: #fff;
  font-weight: 900;
  cursor: pointer;
  transition: background-color .2s ease;
}
.main-content .invite-form button:hover,
.main-content .invite-form input[type="submit"]:hover{
  background: #b30021;
}

/* Responsive */
@media (max-width: 960px){
  .main-content .invite-form{
    margin: 14px 12px 22px;
    padding: 14px 12px;
  }
  .main-content .invite-form .grid{
    grid-template-columns: 1fr;
  }
}

/* Très petits écrans */
@media (max-width: 420px){
  .main-content .invite-form{
    margin: 10px 8px 16px;
    padding: 12px 10px;
    border-radius: 10px;
  }
  .main-content .invite-form h1{ font-size: 18px; }
  .main-content .invite-form label{ font-size: 13px; }

  .main-content .invite-form input[type="text"],
  .main-content .invite-form input[type="email"],
  .main-content .invite-form input[type="tel"],
  .main-content .invite-form select{
    padding: 9px 10px;
    font-size: 14px;
  }

  .main-content .invite-form .checkline{ padding: 9px 10px; }
}

/* Landscape faible hauteur */
@media (max-height: 520px) and (orientation: landscape){
  .main-content .invite-form{
    margin: 10px 12px 14px;
    padding: 12px 12px;
  }

  .main-content .invite-form button,
  .main-content .invite-form input[type="submit"]{
    padding: 10px 12px;
    border-radius: 22px;
  }
}
</style>

<div class="invite-form">
  <h1>Créer un·e invité·e / ancien·ne animateur·rice</h1>

  {{ form_start(form) }}

  <div class="grid">
    <div class="field">
      {{ form_label(form.firstName) }}
      {{ form_widget(form.firstName) }}
      {{ form_errors(form.firstName) }}
    </div>

    <div class="field">
      {{ form_label(form.lastName) }}
      {{ form_widget(form.lastName) }}
      {{ form_errors(form.lastName) }}
    </div>
  </div>

  <div class="grid">
    <div class="field">
      {{ form_label(form.mail) }}
      {{ form_widget(form.mail) }}
      {{ form_errors(form.mail) }}
    </div>

    <div class="field">
      {{ form_label(form.phoneNumber) }}
      {{ form_widget(form.phoneNumber, {'attr': {'inputmode': 'tel'}}) }}
      {{ form_errors(form.phoneNumber) }}
    </div>
  </div>

  <div class="field">
    <div class="checkline">
      {{ form_widget(form.ancienanimateur) }}
      {{ form_label(form.ancienanimateur) }}
    </div>
    {{ form_errors(form.ancienanimateur) }}
  </div>

{# CSRF hidden uniquement (sans row) #}
{{ form_widget(form._token) }}

{# bouton submit (champ "Sauvegarder") #}
{{ form_widget(form.Sauvegarder) }}
{{ form_rest(form) }}
{{ form_end(form, { render_rest: false }) }}



</div>
{% endblock %}
