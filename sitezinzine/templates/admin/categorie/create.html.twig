{% extends 'admin/admin.html.twig' %}
{% block title 'Créer une catégorie'%}


{% block body %}

<style>

.catecreate {
  font-family: "Montserrat Alternates", sans-serif;
  background-color: #fff;
  padding: 40px;
  border-radius: 10px;
  max-width: 1080px;
  margin: 40px auto;
  box-shadow: 0 0 15px rgba(0,0,0,0.05);
}

.catecreate h1 {
  text-align: center;
  color: #333;
  font-size: 32px;
  margin-bottom: 30px;
}

.catecreate form {
  display: flex;
  flex-direction: column;
  gap: 30px;
}

.catecreate .ligne {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
  width: 100%;
}

.catecreate .champ {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.catecreate label {
  margin-bottom: 6px;
  font-weight: 600;
  color: #444;
  font-size: 14px;
}

.catecreate input[type="text"],
.catecreate input[type="number"],
.catecreate textarea,
.catecreate select {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 15px;
  background: #f9f9f9;
  transition: border 0.2s ease;
}

.tox .tox-statusbar__resize-handle {
  display: block !important;
}

.catecreate input:focus,
.catecreate textarea:focus,
.catecreate select:focus {
  border-color: #4CAF50;
  outline: none;
  background-color: #fff;
}

.catecreate .form-check {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-top: 30px;
}

.catecreate button[type="submit"] {
  background-color: #4CAF50;
  color: white;
  padding: 14px 30px;
  font-size: 16px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  align-self: center;
  transition: background 0.2s ease;
}

.catecreate button[type="submit"]:hover {
  background-color: #388e3c;
}

@media (max-width: 960px) {
  .catecreate .ligne {
    flex-direction: column;
  }
}


</style>

   

   <div class="catecreate">
  <h1>Créer une nouvelle catégorie</h1>

  {{ form_start(form) }}

  <div class="ligne">
  <div class="champ">
    {{ form_label(form.titre) }}
    {{ form_widget(form.titre) }}
  </div>
  <div class="champ">
    {{ form_label(form.editeur) }}
    {{ form_widget(form.editeur) }}
  </div>
  <div class="champ">
    {{ form_label(form.duree) }}
    {{ form_widget(form.duree) }}
  </div>
</div>

  <div data-controller="tinymce">
    {{ form_row(form.descriptif) }}
  </div>

  <div class="ligne">
    <div class="champ">
      {{ form_label(form.thumbnailFile) }}
      {{ form_widget(form.thumbnailFile) }}
    </div>
    <div class="champ">
      {{ form_widget(form.active) }}
      {{ form_label(form.active) }}
    </div>
  </div>



  {{ form_end(form) }}
</div>

    
{% endblock %}