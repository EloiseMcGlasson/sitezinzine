{% extends 'admin/admin.html.twig' %}

{% block title %}Hello ThemeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<p>
    <a class="btn btn-primary btn-sm" href="{{ path('admin.theme.create') }}">
        Créer un nouveau thème
    </a>
</p>
<article>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Noms
                </th>
                <th style="width: 200px">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for theme in themes %}
                <tr>
                    <td>
                        <a href="{{ path('admin.theme.show', {id: theme.id }) }}">
                            {{ theme.name }}

                        </a>

                       
                        <p>
                            {% if theme.thumbnail %}
                                <img src="{{ vich_uploader_asset(theme, 'thumbnailFile') }}" alt="Photo de {{ theme.name }}">
                                {% endif %}
                               
                            </p>
                        </td>
                        
                        <td>
                            <div class="d-flex gap-1">
                                <a class="btn btn-primary btn-sm" href="{{ path('admin.theme.edit', {id: theme.id}) }}">
                                    Éditer
                                </a>
                                <form action="{{ path('admin.theme.delete', {id: theme.id}) }}" method="post">
                                    <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
           
        </article>
{% endblock %}
