{% extends 'admin/admin.html.twig' %}
{% block title %}
    Validation des annonces auditeur
{% endblock %}
{% block body %}
    <style>




ul, li {
   background-color: transparent; 
}

    .annonce {
        background-color: transparent;
        color: white;
        display: grid;
        margin:  20px 40px;
        align-items: center;
        width: calc(100% - 80px); /* Largeur calculée en tenant compte des marges */
    }

    section {
        border: solid 1px #ccc;
        border-radius: 8px;
        display: grid;
        
        grid-template-columns: 150px auto 150px; /* Colonnes fixes pour le contenu */
        background-color: black;
        padding: 15px;
        transition: background-color 0.3s ease;
        min-width: 0; /* Empêche le dépassement */
        overflow: hidden; /* Cache le contenu qui dépasse */
    }

    section:hover {
        background-color: #333;
    }

    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
    }

    a:hover {
        color: #E40039;
    }

    .col1 {
        width: 150px;
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 5px;
    }

    .col1 img {
        width: 150px;
        margin: 10px;
        padding: 10px;
        border-radius: 8px;
    }

    .col2 {
        padding: 10px;
    overflow: hidden; /* Cache le contenu qui dépasse */
    word-wrap: break-word; /* Permet la césure des mots longs */
    }

    .col2 p {
        margin: 5px 0;
        padding-left: 15px;
    }

    .col3 {
        width: 150px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    align-items: center;
    }

    .col3 .btn {
        margin: 5px;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 400;
        font-style: normal;
        
    }

    .col3 form {
        display: inline;
    }

    .btn-primary {
        
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .annonces-row {
    display: grid;
    width: 100%;
    grid-template-columns: repeat(2, 1fr); /* Deux colonnes égales */
    gap: 20px; /* ✅ Espacement entre les annonces */
    margin-bottom: 20px;
    justify-content: center; /* ✅ Centre bien les annonces */
}

/* ✅ Annonces non validées en gris */
.grise {
    background-color: gray !important;
}

.presentation {
    display: -webkit-box;
    -webkit-line-clamp: 10;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    max-height: calc(1.2em * 10); /* hauteur de ligne × nombre de lignes */
    line-height: 1.2em;
}


/* Pour les navigateurs qui ne supportent pas -webkit-line-clamp */
@supports not (-webkit-line-clamp: 10) {
    .presentation {
        position: relative;
        max-height: calc(1.2em * 10);
        overflow: hidden;
        padding-right: 1rem;
    }
    
    .presentation::after {
        content: '...';
        position: absolute;
        right: 0;
        bottom: 0;
        background: black; /* même couleur que le fond */
        padding-left: 0.5rem;
    }
}

/* Responsive design amélioré */
@media (max-width: 1200px) {
    .annonces-row {
        grid-template-columns: 1fr;
    }
    
    section {
        grid-template-columns: 100px auto 100px;
    }
    
    .col1 {
        width: 100px;
    }
    
    .col1 img {
        width: 100%;
        max-width: 100px;
    }
    
    .col3 {
        width: 100px;
        flex-direction: row;
        justify-content: center;
        flex-wrap: wrap;
        gap: 10px;
        padding: 10px;
    }
    .col3 .btn {
        margin: 0;
        min-width: 100px;
    }

    .col3 form {
        margin: 0;
        flex: 0 1 auto;
    }
}

@media (max-width: 768px) {
    .annonce {
        margin: 10px;
        width: calc(100% - 20px);
    }
    
    section {
        grid-template-columns: 1fr;
        grid-template-rows: auto auto auto;
    }
    
    .col1, .col2 {
        width: 100%;
    }
    .col3 {
        width: 100%;

        padding: 15px 5px;
        gap: 5px;
    }
    .btn-primary, .btn-danger {
        padding: 8px 15px;
        font-size: 12px;
    }
}

    
</style>
    <div>
        <h1>
            Liste des annonces
        </h1>
        <article>
            <div class="annonce">
                {% for annonce in annonces %}
                    {% if loop.index == 0 or loop.index % 2 == 1 %}
                        {# ✅ Ouvre une nouvelle ligne TOUS LES 2 ÉLÉMENTS #}
                        <div class="annonces-row">
                        {% endif %}
                        <section {% if not annonce.valid %} style="background-color:gray" {% endif %}>
                            <div class="col1">
                                {% if annonce.thumbnail %}
                                    <img src="{{ vich_uploader_asset(annonce, 'thumbnailFile') }}" alt="Photo de {{ annonce.titre }}">
                                    {% endif %}
                                </div>
                                <div class="col2">
                                    <p class="type">
                                        {{ annonce.type }}
                                    </p>
                                    <p class="titre">
                                        <a href="{{ path('admin.annonce.show', {id: annonce.id }) }}">
                                            {{ annonce.titre }}
                                        </a>
                                    </p>
                                    <p class="orga">
                                        {{ annonce.organisateur }}
                                    </p>
                                    <p class="ville">
                                        {{ annonce.ville }}
                                    </p>
                                    <p class="departement">
                                        {{ annonce.departement }}
                                    </p>
                                    <p class="debutFin">
                                        {{ annonce.dateDebut|date('d/m/Y') }}
                                        -
                                        {{ annonce.dateFin|date('d/m/Y') }}
                                        -
                                        {{ annonce.horaire }}
                                    </p>
                                    <p class="presentation">
                                        {{ annonce.presentation | raw }}
                                    </p>
                                </div>
                                <div class="col3">
                                    <a class="btn btn-primary btn-sm" href="{{ path('admin.annonce.edit', {id: annonce.id}) }}" data-controller="return" data-return-url-value="{{ path('admin.annonce.edit', { id: annonce.id }) }}" data-action="click->return#redirectWithReturnTo">
                                        Éditer
                                    </a>
                                    {% if annonce.valid %}
                                        <form action="{{ path('admin.annonce.unvalid', {id: annonce.id}) }}" method="post">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                Dévalider
                                            </button>
                                        </form>
                                    {% else %}
                                        <form action="{{ path('admin.annonce.valid', {id: annonce.id}) }}" method="post">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                Valider
                                            </button>
                                        </form>
                                    {% endif %}
                                     <form action="{{ path('admin.annonce.softDelete', { id: annonce.id }) }}" method="post" data-controller="return" data-action="submit->return#confirmBeforeSubmit submit->return#redirectWithReturnTo">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
                                                                    <button type="submit" class="btn-action btn-delete">
                                                                        Supprimer
                                                                    </button>
                                                                </form>
                                    </div>
                                </section>
                                {% if loop.index0 % 2 == 1 or loop.last %}
                                {# ✅ Ferme la ligne après 2 annonces ou si c'est la DERNIÈRE annonce seule #}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </article>
            </div>
        {% endblock %}
        