{% extends 'admin/admin.html.twig' %}
{% block title "Éditeur : " ~ editeur.name %}
{% block body %}
    <style>

.titre {
    text-align: center;
    margin: 10px;
}
.bottom img {
    width: 100%;
    display: block;
    margin: 0;
    padding: 0;
}


.emissionsdelaediteur {
    background-color: white;
}
article{
    border: solid;
    border-collapse: collapse;
    display: grid;
    grid-template-columns: 1fr 4fr 1fr;
    margin: 0 80px;
}

    
    .col2 {
       margin: 20px;
    }
    .col3 {
        
    display: grid; 
    grid-template-columns: 1fr 1fr; 
    grid-template-rows: 1fr; 
    gap: 0px 0px; 
    grid-template-areas: 
      "ecoute dl"; 
    align-items: center;
    justify-self: center;
    }

.editdescriptif {
    margin: 15px;
}

.bottom img{
    width: 100%;
    margin-bottom: 0px;
    padding-bottom: 0px;
    
}
.editemission img {
    width: 150px;
}
.editimg img {
    float: left;
    margin: 10px;
    width: 250px;
}
.ecoute img {
        width: 40px;
        height: 40px;
        align-content: right;
    }
    
    a {
        padding: 14px 16px;
        color: black;
        text-decoration: none;
        font-weight: 800;
    }

    a:hover {
        padding: 14px 16px;
        color: #E40039;
        text-decoration: none;
        font-weight: 800; 
    }

</style>
    <div>
        <div class="editblock">
            <div class="titre">
                <h1>
                    {{ editeur.name }}
                </h1>
            </div>
        </div>
        <div class="bottom">
            <img src="/images/top-content-dechire-D.gif"></div>
        </div>
        <div class="emissionsdelaediteur">
            <div class="titre">
                <h2>
                    Toutes les émissions de cet éditeur :
                </h2>
            </div>
            <div class="editemission">
                {% for emission in editeur.emissions | sort((a, b) => b.datepub <=> a.datepub) %}
                    <article>
                        <div class="col1">
                            {% if emission.thumbnail %}
                                <img src="{{ vich_uploader_asset(emission, 'thumbnailFile') }}" alt="Photo de {{ emission.titre }}">
                                {% endif %}
                            </div>
                            <div class="col2">
                                <h2>
                                    {{ emission.titre }}
                                </h2>
                                <p>
                                    {{ emission.datepub|date('d-m-Y') }}
                                    {{ emission.descriptif | raw }}
                                </p>
                            </div>
                            <div class="col3">
                                {% if emission.url %}
                                    <div class='ecoute'>
                                        <a href="{{ emission.url }}">
                                            <img src="/images/lecteur.png" alt="écoutez l'émission"></a>
                                        </div>
                                        <a class="btn btn-primary btn-sm" href="{{ path('admin.emission.edit', { id: emission.id }) }}" data-controller="return" data-return-url-value="{{ path('admin.emission.edit', { id: emission.id }) }}" data-action="click->return#redirectWithReturnTo">
                                            Éditer
                                        </a>
                                    {% else %}
                                        <p>
                                            <div class='ecoute'>
                                                Pas de fichier audio disponible
                                            </div>
                                            <a class="btn btn-primary btn-sm" href="{{ path('admin.emission.edit', { id: emission.id }) }}" data-controller="return" data-return-url-value="{{ path('admin.emission.edit', { id: emission.id }) }}" data-action="click->return#redirectWithReturnTo">
                                                Éditer
                                            </a>
                                        </a>
                                    </p>
                                </div>
                            {% endif %}
                        </article>
                    {% endfor %}
                </div>
            </div>
        {% endblock %}
        