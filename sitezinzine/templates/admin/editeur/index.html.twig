{% extends 'admin/admin.html.twig' %}

{% block title %}
    Tout les éditeurs !
{% endblock %}

{% block body %}
    <style>
   
    .editeur {
        background-color: black;
        color: white;
        display: grid;
        margin: 40px 80px;
        align-items: center; 
        }
        
       section {
        border: solid;
        display: grid;
        border-collapse: collapse;
        grid-template-columns: 1fr 4fr 0.5fr 0.5fr;
    }
   
    .col1 {
     
        width: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
       
       
    }
    .col1 img {
        width: 150px;
        margin: 10px;
    }
    .col2 {
     
    }
    .col3 {
     
        display: flex;
        align-items: center;
        justify-content: center;
     
    }
    .col4 {
        display: flex;
        align-items: center;
        justify-content: center;
     
    }
 
    .img {
        padding: 10px;
    }

    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
    }

    a:hover {
        padding: 14px 16px;
        color: #E40039;
        text-decoration: none;
        font-weight: 800; 
    }

    
    .titre {
        margin: 10px;
    }
  

   

    .create {
        margin: 20px;
        padding: 20px;
    }
   
    </style>
    <div>
       

            <p class="create">
                <a class="btn-create" href="{{ path('admin.editeur.create') }}">
                    Créer un nouvel éditeur
                </a>
            </p>

            <h1>Liste des éditeurs</h1>
            <article>
            <div class="editeur">

                    {% for editeur in editeurs %}

                        <section>
               
                        <div class="col2">
                                <div class="titre">
                                    <a href="{{ path('admin.editeur.show', {id: editeur.id }) }}">
                                        {{ editeur.name }}

                                    </a>
                                </div>
                                
                        </div>
                       
                            
                        <div class="col4">

                                <a class="btn btn-primary btn-sm" href="{{ path('admin.editeur.edit', {id: editeur.id}) }}" data-controller="return"
    data-return-url-value="{{ path('admin.editeur.edit', { id: editeur.id }) }}"
    data-action="click->return#redirectWithReturnTo">
                                    Éditer
                                </a>
                            {#  <form action="{{ path('admin.editeur.delete', { id: editeur.id }) }}" method="post" data-controller="return" data-action="submit->return#confirmBeforeSubmit submit->return#redirectWithReturnTo">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ editeur.id) }}">
                                                                    <button type="submit" class="btn-action btn-delete">
                                                                        Supprimer
                                                                    </button>
                                                                </form> #}
                        </div>
                      
                    </section>
                         
                        {% endfor %}
                    </div>

                </article>
    </div>
            {% endblock %}
            