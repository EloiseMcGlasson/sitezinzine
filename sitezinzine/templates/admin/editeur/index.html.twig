{% extends 'admin/admin.html.twig' %}

{% block title %}
    Tout les éditeurs !
{% endblock %}

{% block body %}
    <style>
   
    .bodyadminediteur {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        height: 100vh;
        margin: 0%;
        padding: 0%;
        display: flex;
        flex-direction: column;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 500;
        font-style: normal;
        }
        strong {
            font-weight: 700 !important;
        }
        em {
            font-style: italic !important;
        }
    .top img{
        width: 100%;
    }
   
    .editeur {
        background-color: black;
        color: white;
        display: grid;
        margin: 40px 80px;
        align-items: center; 
        }
        
       section {
        border: solid;
        display: grid;
        border-collapse: collapse;
        grid-template-columns: 1fr 4fr 0.5fr 0.5fr;
    }
   
    .col1 {
     
        width: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
       
       
    }
    .col1 img {
        width: 150px;
        margin: 10px;
    }
    .col2 {
     
    }
    .col3 {
     
        display: flex;
        align-items: center;
        justify-content: center;
     
    }
    .col4 {
        display: flex;
        align-items: center;
        justify-content: center;
     
    }
 
    .img {
        padding: 10px;
    }

    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
    }

    a:hover {
        padding: 14px 16px;
        color: #E40039;
        text-decoration: none;
        font-weight: 800; 
    }

    
    .titre {
        margin: 10px;
    }
  

    .btn-create-editeur {
        text-decoration: none;
        padding: 5px;
        font-size: 1.2em;
        color: #000000;
        background-color: #ffffff;
        border-radius: 26px;
        -webkit-border-radius: 26px;
        -moz-border-radius: 26px;
        border: 4px solid black;
        box-shadow: 3px 7px 13px #444444;
        -webkit-box-shadow: 3px 7px 13px #444444;
        -moz-box-shadow: 3px 7px 13px #444444;
    }

    .btn-create-editeur:hover {
        padding: 5px;
        background-color: #E40039;
        color: #000000;
        border-radius: 24px;
        -webkit-border-radius: 24px;
        -moz-border-radius: 24px;
        box-shadow: 3px 7px 13px #777777;
        -webkit-box-shadow: 3px 7px 13px #777777;
        -moz-box-shadow: 3px 7px 13px #777777;
    }

    .create {
        margin: 20px;
        padding: 20px;
    }
   
    </style>
    <div class="bodyadminediteur">
        <div class="top">
            <img src="{{ asset('/images/bottom-header.gif') }}"></div>

            <p class="create">
                <a class="btn-create-editeur" href="{{ path('admin.editeur.create') }}">
                    Créer un nouveau editeur
                </a>
            </p>
           
            
            <article>
            <div class="editeur">

                    {% for editeur in editeurs %}

                        <section>
               
                        <div class="col2">
                                <div class="titre">
                                    <a href="{{ path('admin.editeur.show', {id: editeur.id }) }}">
                                        {{ editeur.name }}

                                    </a>
                                </div>
                                
                        </div>
                       
                            
                        <div class="col4">

                                <a class="btn btn-primary btn-sm" href="{{ path('admin.editeur.edit', {id: editeur.id}) }}">
                                    Éditer
                                </a>
                            {# <form action="{{ path('admin.editeur.delete', {id: editeur.id}) }}" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm">
                                Supprimer
                                </button>
                            </form> #}
                        </div>
                      
                    </section>
                         
                        {% endfor %}
                    </div>

                </article>
              
            {% endblock %}
            