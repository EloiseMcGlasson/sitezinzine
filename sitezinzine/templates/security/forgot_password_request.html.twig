{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<style>
  .reset-wrap{
    background: linear-gradient(#E4013A, #B81C61);
    min-height: 100vh;
    padding: 24px 0;
    font-family: "Montserrat Alternates", sans-serif;

    /* ✅ évite les sauts liés à la barre d’adresse mobile */
    min-height: 100svh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .reset-card{
    width: min(420px, calc(100% - 24px)); /* ✅ toujours dans l’écran */
    margin: 0 auto;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,.12);
    padding: 1.5rem;
    color: #1C1C1A;
  }

  .reset-card h1{
    margin: 0 0 14px 0;
    text-align: center;
    color: #E4013A;
    font-weight: 900;
    font-size: 22px;
    overflow-wrap: anywhere;
  }

  .reset-card p{
    margin: 0 0 14px 0;
    color: #444;
    text-align: left;
  }

  .reset-card label{
    display:block;
    margin: 12px 0 6px;
    font-weight: 800;
    color:#333;
  }

  .reset-card input{
    width: 100%;
    padding: .8rem;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 16px; /* ✅ évite le zoom iOS */
    box-sizing: border-box;
  }

  .btn{
    width: 100%;
    padding: .8rem;
    border: 0;
    border-radius: 26px;
    background: #E4013A;
    color: #fff;
    font-weight: 900;
    cursor: pointer;
    margin-top: 14px;
    font-size: 16px;
  }

  .btn:hover{ background:#b30021; }

  .link{
    display:block;
    text-align:center;
    margin-top: 12px;
    color:#E4013A;
    font-weight: 900;
    text-decoration:none;
  }

  .info{
    background: #f5f5f5;
    border: 1px solid #eee;
    padding: 12px;
    border-radius: 8px;
    margin-top: 10px;
    color: #333;
    overflow-wrap: anywhere;
  }

  /* ✅ Mobile */
  @media (max-width: 480px){
    .reset-wrap{
      padding: 16px 0;
      align-items: flex-start; /* ✅ plus confortable sur petit écran */
    }

    .reset-card{
      margin-top: 16px;
      padding: 1.1rem;
      border-radius: 12px;
    }

    .reset-card h1{
      font-size: 20px;
      margin-bottom: 12px;
    }

    .reset-card p{
      font-size: 14px;
      margin-bottom: 12px;
    }

    .reset-card label{
      font-size: 14px;
    }

    .btn{
      border-radius: 22px;
    }
  }
</style>

<div class="reset-wrap">
  <div class="reset-card">
    <h1>Mot de passe oublié</h1>

    {% if sent %}
      <div class="info">
        Si un compte existe avec cet email, un lien de réinitialisation a été envoyé.
      </div>
      <a class="link" href="{{ path('app_login') }}" data-turbo="false">Retour à la connexion</a>
    {% else %}
      <p>Entrez votre email pour recevoir un lien de réinitialisation.</p>

      {{ form_start(requestForm, { attr: { 'data-turbo': 'false' } }) }}
        {{ form_row(requestForm.email) }}
        <button class="btn" type="submit">Envoyer le lien</button>
      {{ form_end(requestForm) }}

      <a class="link" href="{{ path('app_login') }}" data-turbo="false">Retour à la connexion</a>
    {% endif %}
  </div>
</div>
{% endblock %}
