{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>    
    .bodylogin {
        background: linear-gradient(#E4013A, #B81C61);
        min-height: 100vh;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        font-family: "Montserrat Alternates", sans-serif;
    }

    .top img {
        width: 100%;
        display: block;
    }

    .form {
        width: 90%;
        max-width: 400px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form h1 {
        text-align: center;
        color: #E4013A;
        font-size: 24px;
        margin-bottom: 2rem;
    }

    .form label {
        display: block;
        margin: 1rem 0 0.5rem;
        color: #333;
        font-weight: bold;
    }

    .form input[type="text"],
    .form input[type="password"] {
        width: 100%;
        padding: 0.8rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 1rem;
    }

    .checkbox {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .checkbox input[type="checkbox"] {
        margin: 0;
    }

    .alert {
        background-color: #ffe6e6;
        border: 1px solid #ffcccc;
        color: #cc0000;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 4px;
    }

    button[type="submit"] {
        width: 100%;
        padding: 0.8rem;
        background-color: #E4013A;
        color: white;
        border: none;
        border-radius: 26px;
        font-size: 1.1rem;
        cursor: pointer;
        margin-top: 1rem;
        transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
        background-color: #b30021;
    }

    .register-section {
        text-align: center;
        margin-top: 2rem;
        color: #666;
    }

    .register-btn {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        background-color: white;
        color: #E4013A;
        text-decoration: none;
        border: 2px solid #E4013A;
        border-radius: 26px;
        margin-top: 0.5rem;
        transition: all 0.3s ease;
    }

    .register-btn:hover {
        background-color: #E4013A;
        color: white;
    }

    @media (max-width: 768px) {
        .form {
            width: 95%;
            padding: 1rem;
        }
    }
</style>
<div class="bodylogin">
    <div class="top">
        <img src="/images/bottom-header.gif" alt="Décoration d'en-tête">
    </div>
    
    <div class="form">
        <form method="post" data-turbo="false">
            {% if error %}
                <div class="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="alert">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, 
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1>Connectez-Vous</h1>
            
            <label for="username">Nom d'utilisateurice</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" 
                   autocomplete="username" required autofocus>
            
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" 
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Se rappeler de moi</label>
            </div>

            <button type="submit">Se connecter</button>
        </form>

        <div class="register-section">
            <p>Pas encore de compte ?</p>
           <a href="{{ path('app_register') }}" class="register-btn" data-turbo="false">
                Créer un compte
            </a>
        </div>
    </div>
</div>
{% endblock %}
