{% extends 'base.html.twig' %}
{% block title "√âmission : " ~ emission.titre %}
{% block body %}
    <style>
.bodyemission {
    background: linear-gradient(#E4013A, #B81C61);
    background-size: 100%;
    width: 100%;
    margin: 0%;
    padding: 0%;
    display: flex;
    flex-direction: column;
    font-family: "Montserrat Alternates", sans-serif;
    font-weight: 700;
    font-style: normal;
    position: relative;
    color: white;
    
    line-height: 1.5em;
    }
.top img{
    width: 100%;
}
.titre {
    text-align: center;
    margin: 10px;
}
h1 {
    font-size: 23px;  
}
.texteemission {
    margin: 20px;
}

.texteemission img {
    float: left;
    margin: 10px;
    width: 250px;
}

.catemission img {
    float: right;
    margin: 10px;
    width: 250px;
}
.descriptif {
    margin: 15px;
}
.bottom img {
    width: 100%;
    margin-bottom: 0px;
    padding-bottom: 0px;
}
.texteemission a img {
    width: 60px;
        
}

.texteemission a {
    padding: 14px 16px;
    color: white;
    text-decoration: none;
    font-weight: 800;
        
}
.texteemission a:hover {
    padding: 14px 16px;
    color: black;
    text-decoration: none;
    font-weight: 800;
        
}

.catemission a {
    padding: 14px 16px;
    color: white;
    text-decoration: none;
    font-weight: 800;
        
}
.catemission a:hover {
    padding: 14px 16px;
    color: black;
    text-decoration: none;
    font-weight: 800;
}
    .theme {
        
        text-align: center;
        background: white;
        color: black;
    }

    .themeemission {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem;
    width: 80%;
    margin: 0 auto;
}

.emission-row {
    display: flex;
    background-color: #fff;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    align-items: center;
    gap: 1rem;
    color: #1C1C1A;
}

.emission-image img {
    width: 120px;
    height: auto;
    border-radius: 4px;
    object-fit: cover;
}

.emission-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    text-align: left;
    
}

.emission-content h3 {
    margin: 0;
    font-size: 1.2em;
    color: #1C1C1A;
}

.emission-content .date {
    font-size: 0.9em;
    color: #888;
}

.emission-content .description {
    font-size: 1em;
    color: #333;
    word-wrap: break-word;
    overflow-wrap: break-word;
    word-break: break-word;
}


.emission-link {
    margin-left: auto;
    display: flex;
    align-items: center;
}

.listen-link {
    background-color: #E40039;
    color: #fff;
    padding: 0.6rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease;
}

.listen-link:hover {
    background-color: #c70030;
}

.table-infos {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    background: white;
    color: #1C1C1A;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.table-infos th, .table-infos td {
    padding: 1rem;
    border-bottom: 1px solid #eee;
    text-align: left;
    vertical-align: top;
}

.table-infos th {
    background-color: #E40039;
    color: white;
    font-weight: bold;
}

.table-infos a {
    color: #E40039;
    text-decoration: none;
    font-weight: 600;
}

.table-infos a:hover {
    text-decoration: underline;
}

a {
        padding: 14px 16px;
        color:  #E40039;
        text-decoration: none;
        font-weight: 800;
            
    }
    a:hover {
        padding: 14px 16px;
        color:black;
        text-decoration: none;
        font-weight: 800;
            
    }

    .theme-buttons {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.theme-button {
    background-color: #E40039;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.4rem 0.8rem;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.theme-button:hover {
    background-color: #c70030;
}
#theme-filter-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin: 1rem 0;
}

.theme-card-button {
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    width: 180px;
    height: 120px;
    border-radius: 8px;
    overflow: hidden;
    background: none;
    position: relative;
    transition: transform 0.2s ease-in-out;
}

.theme-card-button:hover {
    transform: scale(1.03);
}

.theme-card-background {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

.theme-card-overlay {
    background-color: rgba(0, 0, 0, 0.6); /* semi-transparent noir */
    color: white;
    font-weight: bold;
    text-align: center;
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
}

.theme-card-button.active .theme-card-overlay {
    background-color: #E40039;
    color: white;
    font-weight: bold;
    opacity: 1;
    transition: all 0.3s ease;
}




@media (max-width: 768px) {
    h1 {
        font-size: 20px;
    }

    .texteemission img,
    .catemission img {
        float: none;
        display: block;
        margin: 0 auto 20px auto;
        width: 90%;
    }

    .texteemission, .catemission {
        text-align: center;
    }

    .emission-row {
        flex-direction: column;
        align-items: flex-start;
    }

    .emission-image img {
        width: 100%;
        height: auto;
    }

    .emission-link {
        margin-left: 0;
        margin-top: 1rem;
        align-self: stretch;
    }

    .listen-link {
        width: 100%;
        text-align: center;
    }
}

    
