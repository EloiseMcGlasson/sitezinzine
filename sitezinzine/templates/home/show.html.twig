{% extends 'base.html.twig' %}
{% block title %}
    "Émission : " ~
    {{ emission.titre }}
{% endblock %}
{% block body %}
    <style>
.bodyemission {
    background: linear-gradient(#E4013A, #B81C61);
    background-size: 100%;
    width: 100%;
    margin: 0, auto;
    padding: 0, auto;
    display: flex;
    flex-direction: column;
    font-family: "Montserrat Alternates", sans-serif;
    font-weight: 700;
    font-style: normal;
    position: relative;
    color: white;
    
    line-height: 1.5em;
    }
.top img{
    width: 100%;
}
.titre {
    text-align: center;
    margin: 10px;
}
h1 {
    font-size: 23px;  
}
.catemission img {
    float: right;
    margin: 10px;
    width: 250px;
}
.descriptif {
    margin: 15px;
}
.bottom img {
    width: 100%;
    margin-bottom: 0px;
    padding-bottom: 0px;
}
   .theme {
        
        text-align: center;
        background: white;
        color: black;
    }

    .themeemission {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem;
    width: 80%;
    margin: 0 auto;
}

.emission-row {
    display: flex;
    background-color: #fff;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    align-items: center;
    gap: 1rem;
    color: #1C1C1A;
}

.emission-image img {
    width: 120px;
    height: auto;
    border-radius: 4px;
    object-fit: cover;
}

.emission-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    text-align: left;
    
}

.emission-content h3 {
    margin: 0;
    font-size: 1.2em;
    color: #1C1C1A;
}

.emission-content .date {
    font-size: 0.9em;
    color: #888;
}

.emission-content .description {
    font-size: 1em;
    color: #333;
    word-wrap: break-word;
    overflow-wrap: break-word;
    word-break: break-word;
}


.emission-link {
    margin-left: auto;
    display: flex;
    align-items: center;
}
 .listen-link {
    background-color: #E40039;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.4rem 0.8rem;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.listen-link:hover {
    background-color: #c70030;
}

#theme-filter-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin: 1rem 0;
}

.theme-card-button {
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    width: 180px;
    height: 120px;
    border-radius: 8px;
    overflow: hidden;
    background: none;
    position: relative;
    transition: transform 0.2s ease-in-out;
}

.theme-card-button:hover {
    transform: scale(1.03);
}

.theme-card-background {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

.theme-card-overlay {
    background-color: rgba(0, 0, 0, 0.6); /* semi-transparent noir */
    color: white;
    font-weight: bold;
    text-align: center;
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
}

.theme-card-button.active .theme-card-overlay {
    background-color: #E40039;
    color: white;
    font-weight: bold;
    opacity: 1;
    transition: all 0.3s ease;
}
.fiche-emission {
    max-width: 900px;
    margin: 2rem auto;
    background-color: #fff;
    color: #1C1C1A;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    padding: 1.5rem;
    font-family: "Montserrat Alternates", sans-serif;
}

.btn-back {
    display: inline-block;
    margin-bottom: 1rem;
    color: #E40039;
    font-weight: bold;
    text-decoration: none;
}

.btn-back:hover {
    text-decoration: underline;
}

.bloc-haut {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    flex-wrap: wrap;
}

.bloc-image img {
    width: 200px;
    border-radius: 6px;
    object-fit: cover;
    max-width: 100%;
}

.bloc-texte {
    flex: 1;
}

.bloc-texte h1 {
    font-size: 1.6rem;
    margin-bottom: 1rem;
    color: #E40039;
}

.descriptif {
    font-size: 1rem;
    line-height: 1.6;
}
.description-wrapper {
  position: relative;
  margin-top: 0.5em;
}

.description-toggle-btn {
  background: none;
  color: #E40039;
  font-weight: bold;
  border: none;
  cursor: pointer;
  margin-top: 0.5em;
}

.description-wrapper .description {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  max-height: 4.5em;
  transition: max-height 0.3s ease;
}

.description-wrapper .description.expanded {
  -webkit-line-clamp: unset;
  max-height: 1000px;
}


.bloc-infos {
    margin-top: 2rem;
}

.table-infos th {
    background-color: #E40039;
    color: white;
    padding: 1rem;
    text-align: left;
    font-weight: bold;
    vertical-align: top;
}
.table-infos {
    width: 100%;
    border-collapse: collapse;
    background-color: #f9f9f9;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

.table-infos td {
    text-align: left;
    border-bottom: 1px solid #eee;
    padding: 1rem;
    border-top: 1px solid #eee;
}

a, .table-infos a {
    color: #E40039;
    font-weight: bold;
    text-decoration: none;
    transition: color 0.3s ease;
}

a:hover, .table-infos a:hover {
    color: black;
}
#emission-list .date 
{
   display: flex;
  justify-content: space-between;
  align-items: center; /* optionnel, pour aligner verticalement */
}

/* Responsive */

@media (max-width: 768px) {

 .bloc-haut {
        flex-direction: column;
        align-items: center;
    }

    .bloc-image img {
        width: 100%;
    }

    .bloc-texte {
        text-align: center;
    }
    h1 {
        font-size: 20px;
    }

    
    .catemission img {
        float: none;
        display: block;
        margin: 0 auto 20px auto;
        width: 90%;
    }

     .catemission {
        text-align: center;
    }

    .emission-row {
        flex-direction: column;
        align-items: flex-start;
    }

    .emission-image img {
        width: 100%;
        height: auto;
    }

    .emission-link {
        margin-left: 0;
        margin-top: 1rem;
        align-self: stretch;
    }

    .listen-link {
        width: 100%;
        text-align: center;
    }
}

    
    </style>
    <div class="bodyemission">
        <div class="top">
            <img src="{{ asset('/images/bottom-header.gif') }}"></div>
            <div class="fiche-emission">
                <a href="{{ app.request.headers.get('referer') ?? '/' }}" class="btn-back">
                    ← Retour
                </a>
                <div class="bloc-haut">
                    <div class="bloc-image">
                        {% if emission.thumbnail %}
                            <img
                            src="{{ vich_uploader_asset(emission, 'thumbnailFile') }}" alt="Photo de {{ emission.titre }}">
                                {% elseif emission.categorie.thumbnail %}
                                <img
                                src="{{ vich_uploader_asset(emission.categorie, 'thumbnailFile', 'App\\Entity\\Categories') }}" alt="Photo de {{ emission.titre }}">
                                    {% elseif emission.theme.thumbnail is defined %}
                                    <img
                                    src="{{ vich_uploader_asset(emission.theme, 'thumbnailFile', 'App\\Entity\\Theme') }}" alt="Photo de {{ emission.titre }}">
                                        {% else %}
                                        <img src="{{ asset('/images/emission-zinzine.jpg') }}" alt="Image par défaut">
                                        {% endif %}
                                    </div>
                                    <div class="bloc-texte">
                                        <h1>
                                            {{ emission.titre }}
                                        </h1>
                                        <div class="descriptif">
                                            {{ emission.descriptif | raw }}
                                        </div>
                                    </div>
                                </div>
                                <div class="bloc-infos">
                                    <table class="table-infos">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Infos diverses
                                                </th>
                                                <th>
                                                    Horaire de passage
                                                </th>
                                                <th>
                                                    Liens
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <strong>
                                                        Thème :
                                                    </strong>
                                                    {{ emission.theme.name }}
                                                    <br>
                                                        <strong>
                                                            Référent·es :
                                                        </strong>
                                                        {{ emission.ref }}
                                                    </td>
                                                    <td>
                                                        {{ emission.datepub|format_datetime('long', 'none', locale='fr') }}
                                                    </td>
                                                    <td>
                                                        {% if emission.url %}
                                                            <a href="{{ emission.url }}" target="_blank">
                                                                🎧 Écouter
                                                            </a>
                                                            <br>
                                                                <a href="{{ emission.url }}" download target="_blank">
                                                                    ⬇ Télécharger
                                                                </a>
                                                            {% else %}
                                                                Aucun lien disponible
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="catemission">
                                            <div class="titre">
                                                <a href="{{ path('categorie.show', {'id': emission.categorie.id}) }}">
                                                    <h1>
                                                        {{ emission.categorie.titre }}
                                                    </h1>
                                                </a>
                                            </div>
                                            {% if emission.categorie.thumbnail %}
                                                <img src="{{ vich_uploader_asset(emission.categorie, 'thumbnailFile') }}" alt="Photo de {{ emission.categorie.titre }}">
                                                {% endif %}
                                                <div class="descriptif">
                                                    {{ emission.categorie.descriptif | raw }}
                                                </div>
                                            </div>
                                        </div>
                                        <img class="bottom" src="{{ asset('/images/top-content-dechire-D.gif') }}">
                                            <div class="theme">
                                                <div class="themeemission">
                                                    <h2>
                                                        Envie de plus ?
                                                    </h2>
                                                    <div class="theme-list">
                                                        <h3>
                                                            Thèmes :
                                                        </h3>
                                                        <div data-controller="theme-filter">
                                                            <div id="theme-filter-buttons">
                                                                {% for theme in themesInGroup %}
                                                                    {% set backgroundImage = theme.thumbnail
        ? vich_uploader_asset(theme, 'thumbnailFile', 'App\\Entity\\Theme')
        : asset('/uploads/images/emissions/emission-zinzine.org') %}
