{% extends 'base.html.twig' %}
{% block title %}
    "Émission : " ~
    {{ emission.titre }}
{% endblock %}
{% block body %}
    <style>
/* ========== GÉNÉRAL ========== */

.bodyemission {
    background: linear-gradient(#E4013A, #B81C61);
    width: 100%;
    display: flex;
    flex-direction: column;
    font-family: "Montserrat Alternates", sans-serif;
    font-weight: 700;
    font-style: normal;
    position: relative;
    color: white;
    line-height: 1.5em;
    margin: 0 auto;
    padding: 0;
}

.bodyemission a,
.bodyemission .table-infos a {
    color: #E40039;
    font-weight: bold;
    text-decoration: none;
    transition: color 0.3s ease;
}

.bodyemission a:hover,
.bodyemission .table-infos a:hover {
    color: black;
}

.bodyemission h1 {
    font-size: 23px;
}

.bodyemission .titre {
    text-align: center;
    margin: 10px;
}

.bodyemission .top img,
.bodyemission .bottom img {
    width: 100%;
    display: block;
}

/* ========== FICHE ÉMISSION ========== */

.bodyemission .fiche-emission {
    max-width: 900px;
    margin: 2rem auto;
    background-color: #fff;
    color: #1C1C1A;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    padding: 1.5rem;
    font-family: "Montserrat Alternates", sans-serif;
}

.bodyemission .bloc-haut {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    flex-wrap: wrap;
}

.bodyemission .bloc-image img {
    width: 200px;
    border-radius: 6px;
    object-fit: cover;
    max-width: 100%;
}

.bodyemission .bloc-texte {
    flex: 1;
}

.bodyemission .bloc-texte h1 {
    font-size: 1.6rem;
    margin-bottom: 1rem;
    color: #E40039;
}

.bodyemission .descriptif {
    font-size: 1rem;
    line-height: 1.6;
    margin: 15px;
}

.bodyemission .btn-back {
    display: inline-block;
    margin-bottom: 1rem;
    color: #E40039;
    font-weight: bold;
    text-decoration: none;
}

.bodyemission .btn-back:hover {
    text-decoration: underline;
}

/* ========== BLOC INFOS (TABLEAU) ========== */

.bodyemission .bloc-infos {
    margin-top: 2rem;
}

.bodyemission .table-infos {
    width: 100%;
    border-collapse: collapse;
    background-color: #f9f9f9;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

.bodyemission .table-infos thead {
    border: 2px solid #E40039;
    
}

.bodyemission .table-infos th {
    background-color: #E40039;
    color: white;
    padding: 1rem;
    text-align: left;
    font-weight: bold;
    vertical-align: top;
    border-bottom: 2px solid #E40039;
}

.bodyemission .table-infos td {
    text-align: left;
    padding: 1rem;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
}

/* ========== CATEGORIE ========== */

.bodyemission .catemission {
    border: 2px solid black;
    overflow: hidden;
    border-radius: 8px;
}

.bodyemission .catemission img {
    float: left;
    margin: 10px 20px 10px 10px;
    width: 250px;
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 8%;
}

/* ========== ÉMISSION LIÉES / THEMES ========== */

.bodyemission .theme {
    text-align: center;
    background: white;
    color: black;
}

.bodyemission .themeemission {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem;
    width: 80%;
    margin: 0 auto;
}

.bodyemission .theme-card-button {
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    width: 180px;
    height: 120px;
    border-radius: 8px;
    overflow: hidden;
    background: none;
    position: relative;
    transition: transform 0.2s ease-in-out;
}

.bodyemission .theme-card-button:hover {
    transform: scale(1.03);
}

.bodyemission .theme-card-button.active {
    transition: all 0.2s ease;
}

.bodyemission .theme-card-button.active .theme-card-overlay {
    background-color: #E40039 !important; /* fond bandeau rouge */
}


.bodyemission .theme-card-background {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    position: relative;
}

.bodyemission .theme-card-overlay {
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    font-weight: bold;
    text-align: center;
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
}

.bodyemission .theme-card-button.active .theme-card-overlay {
    background-color: #E40039;
    opacity: 1;
    transition: all 0.3s ease;
}

/* ========== LISTE ÉMISSIONS LIÉES ========== */

.bodyemission .emission-row {
    display: flex;
    background-color: #fff;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    align-items: center;
    gap: 1rem;
    color: #1C1C1A;
    margin-bottom: 1.5rem;
}

.bodyemission .emission-image img {
    width: 120px;
    height: auto;
    border-radius: 4px;
    object-fit: cover;
}

.bodyemission .emission-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    text-align: left;
}

.bodyemission .emission-content h3 {
    margin: 0;
    font-size: 1.2em;
    color: #1C1C1A;
}

.bodyemission .emission-content .date {
    font-size: 0.9em;
    color: #888;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bodyemission .emission-content .description {
    font-size: 1em;
    color: #333;
    word-wrap: break-word;
    overflow-wrap: break-word;
    word-break: break-word;
}

.bodyemission .emission-link {
    margin-left: auto;
    display: flex;
    align-items: center;
}

.bodyemission .listen-link {
    background-color: #E40039;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.4rem 0.8rem;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.bodyemission .listen-link:hover {
    background-color: #c70030;
}

/* ========== DESCRIPTION TOGGLE ========== */

.bodyemission .description-wrapper {
    position: relative;
    margin-top: 0.5em;
}

.bodyemission .description-toggle-btn {
    background: none;
    color: #E40039;
    font-weight: bold;
    border: none;
    cursor: pointer;
    margin-top: 0.5em;
}

.bodyemission .description-wrapper .description {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    max-height: 4.5em;
    transition: max-height 0.3s ease;
}

.bodyemission .description-wrapper .description.expanded {
    -webkit-line-clamp: unset;
    max-height: 1000px;
}

/* ===== PAGINATION ===== */
.bodyemission .pagination {
  display: flex;
  gap: .5rem;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 1rem;
}

.bodyemission .page-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: .35rem .8rem;
  border: 2px solid #E40039;
  background: #fff;
  color: #E40039;
  font-weight: 700;
  border-radius: 9999px; /* pilule */
  cursor: pointer;
  transition: all .2s ease;
  line-height: 1;
  min-width: 2.25rem;
  user-select: none;
}

.bodyemission .page-btn:hover {
  background: #E40039;
  color: #fff;
  transform: translateY(-1px);
  box-shadow: 0 4px 10px rgba(228, 0, 57, 0.15);
}

.bodyemission .page-btn.active,
.bodyemission .page-btn[aria-current="page"] {
  background: #E40039;
  color: #fff;
  box-shadow: 0 4px 10px rgba(228, 0, 57, 0.2);
}

.bodyemission .page-btn.is-prev,
.bodyemission .page-btn.is-next {
  padding: .35rem .7rem;
}

.bodyemission .page-btn[disabled],
.bodyemission .page-btn.is-disabled {
  opacity: .45;
  pointer-events: none;
  background: #f2f2f2;
  color: #999;
  border-color: #ddd;
  box-shadow: none;
  transform: none;
}

/* Responsive : un peu plus compact sur mobile */
@media (max-width: 480px) {
  .bodyemission .page-btn { padding: .3rem .65rem; }
}

/* ========== RESPONSIVE ========== */

@media (max-width: 768px) {
    .bodyemission .bloc-haut {
        flex-direction: column;
        align-items: center;
    }

    .bodyemission .bloc-image img {
        width: 100%;
    }

    .bodyemission .bloc-texte {
        text-align: center;
    }

    .bodyemission h1 {
        font-size: 20px;
    }

    .bodyemission .catemission img {
        float: none;
        display: block;
        margin: 0 auto 20px auto;
        width: 90%;
    }

    .bodyemission .catemission {
        text-align: center;
        overflow: visible;
    }

    .bodyemission .emission-row {
        flex-direction: column;
        align-items: flex-start;
    }

    .bodyemission .emission-image img {
        width: 100%;
        height: auto;
    }

    .bodyemission .emission-link {
        margin-left: 0;
        margin-top: 1rem;
        align-self: stretch;
    }

    .bodyemission .listen-link {
        width: 100%;
        text-align: center;
    }
}
    </style>
    <div class="bodyemission">
    <div class="top">
        <img src="{{ asset('images/bottom-header.gif') }}">
    </div>

    <div class="fiche-emission">
        <a href="{{ app.request.headers.get('referer') ?? '/' }}" class="btn-back">← Retour</a>

        <div class="bloc-haut">
            <div class="bloc-image">
                {% if emission.thumbnail %}
                    <img src="{{ vich_uploader_asset(emission, 'thumbnailFile') }}" alt="Photo de {{ emission.titre }}">
                {% elseif emission.categorie.thumbnail %}
                    <img src="{{ vich_uploader_asset(emission.categorie, 'thumbnailFile', 'App\\Entity\\Categories') }}" alt="Photo de {{ emission.titre }}">
                {% elseif emission.theme.thumbnail is defined %}
                    <img src="{{ vich_uploader_asset(emission.theme, 'thumbnailFile', 'App\\Entity\\Theme') }}" alt="Photo de {{ emission.titre }}">
                {% else %}
                    <img src="{{ asset('images/emission-zinzine.jpg') }}" alt="Image par défaut">
                {% endif %}
            </div>

            <div class="bloc-texte">
                <h1>{{ emission.titre }}</h1>
                <div class="descriptif">
                    {{ emission.descriptif | raw }}
                </div>
            </div>
        </div> <!-- /.bloc-haut -->

        <div class="bloc-infos">
            <table class="table-infos">
                <thead>
                    <tr>
                        <th>Infos diverses</th>
                        <th>Horaire de passage</th>
                        <th>Liens</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <strong>Thème :</strong> {{ emission.theme.name }}<br>
                            <strong>Référent·es :</strong> {{ emission.ref }}
                        </td>
                        <td>
                            {{ emission.datepub|format_datetime('long', 'none', locale='fr') }}
                        </td>
                        <td>
                            {% if emission.url %}
                                <a href="{{ emission.url }}" target="_blank">🎧 Écouter</a><br>
                                <a href="{{ emission.url }}" download target="_blank">⬇ Télécharger</a>
                            {% else %}
                                Aucun lien disponible
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div> <!-- /.bloc-infos -->

        <div class="catemission">
            <div class="titre">
                <a href="{{ path('categorie.show', {'id': emission.categorie.id}) }}">
                    <h1>{{ emission.categorie.titre }}</h1>
                </a>
            </div>
            {% if emission.categorie.thumbnail %}
                <img src="{{ vich_uploader_asset(emission.categorie, 'thumbnailFile') }}" alt="Photo de {{ emission.categorie.titre }}">
            {% endif %}
            <div class="descriptif">
                {{ emission.categorie.descriptif | raw }}
            </div>
        </div> <!-- /.catemission -->
    </div> <!-- /.fiche-emission -->

    <img class="bottom" src="{{ asset('images/top-content-dechire-D.gif') }}">
<div class="theme">
    {# On passe au composant la liste des IDs de thèmes du groupe #}
{{ component('related_emissions', {
  groupIds: themesInGroup|map(t => t.id),
  selected: [],
  page: 1
}) }}

       
    </div> <!-- /.theme -->
</div> <!-- /.bodyemission -->

{% endblock %}

                                        