{% extends 'base.html.twig' %}
{% block title "Catégorie : " ~ categorie.titre %}
{% block body %}
    <style>

.catblock {
    background: linear-gradient(#E4013A, #B81C61);
    background-size: 100%;
    width: 100%;
    margin: 0%;
    padding: 0%;
    display: flex;
    flex-direction: column;
    font-family: "Montserrat Alternates", sans-serif;
    font-weight: 700;
    font-style: normal;
    position: relative;
    color: white;
    line-height: 1.5em;
}

.top img {
    width: 100%;
}

.fiche-emission {
    max-width: 900px;
    margin: 2rem auto;
    background-color: #fff;
    color: #1C1C1A;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    padding: 1.5rem;
    font-family: "Montserrat Alternates", sans-serif;
}

.bloc-haut {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    flex-wrap: wrap;
}

.bloc-image img {
    width: 200px;
    border-radius: 6px;
    object-fit: cover;
    max-width: 100%;
}

.bloc-texte {
    flex: 1;
}

.bloc-texte h1 {
    font-size: 1.6rem;
    margin-bottom: 1rem;
    color: #E40039;
}

.descriptif {
    font-size: 1rem;
    line-height: 1.6;
    margin: 15px;
}

.titre {
    text-align: center;
    margin: 10px;
}

.emissionsdelacategorie {
    background-color: white;
}

.catdescriptif {
    margin: 15px;
}

.bottom img {
    width: 100%;
    display: block;
    margin: 0;
    padding: 0;
}

</style>
    <div>
        <div class="catblock">
            <div class="top">
                <img src="{{ asset('images/bottom-header.gif') }}"></div>
                <div class="fiche-emission">
                    <a href="{{ app.request.headers.get('referer') ?? '/' }}" class="btn-back">
                        ← Retour
                    </a>
                    <div class="bloc-haut">
                        <div class="bloc-image">
                            {% if categorie.thumbnail %}
                                <img
                                src="{{ vich_uploader_asset(categorie, 'thumbnailFile') }}" alt="Image de la catégorie {{ categorie.titre }}">
                                    {% else %}
                                    <img src="{{ asset('images/emission-zinzine.jpg') }}" alt="Image par défaut">
                                    {% endif %}
                                </div>
                                <div class="bloc-texte">
                                    <h1>
                                        {{ categorie.titre }}
                                    </h1>
                                    <div class="descriptif">
                                        {{ categorie.descriptif | raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="bottom">
                            <img src="{{ asset('images/top-content-dechire-D.gif') }}"></div>
                        </div>
                    </div>
                    <div class="emissionsdelacategorie">
                        <div class="titre">
                            <h2>
                                Toutes les émissions de cette catégorie :
                            </h2>
                        </div>
                        <div class="catemission">
                            {% include 'partials/list.html.twig' with {
        emissions: emissions,
        filterable: false
    } %}
    Vous en voulez plus ? <a href="{{ path('emission.index') }}">Voir toutes les émissions</a>
                        </div>
                    </div>
                {% endblock %}
                