{% extends 'base.html.twig' %}

{% block title %}Sites amis{% endblock %}

{% block body %}
  <style>
    /* Spécifique "Sites amis" uniquement (le reste est dans editable.css + base) */
    .page-content h2{
      margin: 1.2rem 0 0.6rem 0;
      font-family: "Montserrat Alternates", sans-serif;
      font-weight: 900;
      font-size: 22px;
      color: #B81C61;
      text-align: left;
      clear: both; /* safe si images float dans TinyMCE */
    }

    .page-content a{
      color: #E40039;
      font-weight: 800;
      text-decoration: none;
      overflow-wrap: anywhere;
      word-break: break-word;
    }

    .page-content a:hover{
      text-decoration: underline;
    }

    /* Mobile : liens plus “évidents” */
    @media (max-width: 768px){
      .page-content h2{ font-size: 18px; }
      .page-content a{ text-decoration: underline; }
    }
  </style>

  <div class="editable">
    <div class="page-card">
      {% if page.mainImageName %}
        <div class="page-hero">
          <img src="{{ asset('uploads/pages/' ~ page.mainImageName) }}" alt="{{ page.title }}">
        </div>
      {% endif %}

      <h1 class="page-title">{{ page.title }}</h1>

      <div class="page-content">
        {{ page.content|raw }}
      </div>
    </div>
  </div>
{% endblock %}
