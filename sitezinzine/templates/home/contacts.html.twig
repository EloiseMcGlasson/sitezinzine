    font-family: "Montserrat Alternates", sans-serif;
}
    .contacts {
    max-width: 700px;
    margin: 2rem auto;
    padding: 2rem;
    background-color: #fff;
    border-radius: 8px;
    font-family: "Montserrat", sans-serif;
    color: #1C1C1A;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    line-height: 1.6;
}

.contacts h1 {
    color: #E40039;
    font-size: 2rem;
    text-align: center;
    margin-bottom: 1.5rem;
}

.contacts p {
    margin-bottom: 1rem;
}

.contacts ul {
    list-style: none;
    padding-left: 0;
    margin-bottom: 1.5rem;
}

.contacts li {
    margin-bottom: 0.5rem;
    padding-left: 1.2rem;
    position: relative;
}

.contacts li::before {
    content: "üìç";
    position: absolute;
    left: 0;
    top: 0;
    color: #E40039;
    font-size: 1rem;
}

.contacts a {
    color: #E40039;
    text-decoration: none;
    font-weight: bold;
