{% extends 'base.html.twig' %}

{% block title %}Contacts radio Zinzine{% endblock %}

{% block body %}
  <style>
    /* =========================
       Sp√©cifique CONTACTS
       ========================= */

    /* Listes de contacts avec ic√¥ne üìç */
    .page-content ul{
      list-style: none;
      padding-left: 0;
      margin: 0 0 1.2rem 0;
    }

    .page-content li{
      margin: 0.6rem 0;
      padding-left: 1.6rem;
      position: relative;
    }

    .page-content li::before{
      content: "üìç";
      position: absolute;
      left: 0;
      top: 0;
      font-size: 1rem;
      line-height: 1.4;
    }

    /* Liens */
    .page-content a{
      color: #E40039;
      font-weight: 700;
      text-decoration: none;
      word-break: break-word;
      overflow-wrap: anywhere;
    }

    .page-content a:hover{
      text-decoration: underline;
      color: #B81C61;
    }

    /* Mobile : liens plus visibles */
    @media (max-width: 768px){
      .page-content a{
        text-decoration: underline;
      }
    }
  </style>

  <div class="editable">
    <div class="page-card">

      {% if page.mainImageName %}
        <div class="page-hero">
          <img src="{{ asset('uploads/pages/' ~ page.mainImageName) }}" alt="{{ page.title }}">
        </div>
      {% endif %}

      <h1 class="page-title">{{ page.title }}</h1>

      <div class="page-content">
        {{ page.content|raw }}
      </div>

    </div>
  </div>
{% endblock %}
