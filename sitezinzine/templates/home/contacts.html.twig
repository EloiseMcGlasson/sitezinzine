{% extends 'base.html.twig' %}

{% block title %}Contacts radio Zinzine{% endblock %}

{% block body %}<style>
    .bodycontacts {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        margin: 0%;
        padding: 0%;
       display: flex;
       flex-direction: column;
        font-family: "Montserrat Alternates", sans-serif;
