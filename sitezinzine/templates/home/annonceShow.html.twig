{% extends 'base.html.twig' %}
{% block title "Annonce : " ~ annonce.titre %}
{% block body %}
    <style>
.bodyannonce {
    background: linear-gradient(#E4013A, #B81C61);
    background-size: 100%;
    width: 100%;
    margin: 0%;
    padding: 0%;
    display: flex;
    flex-direction: column;
    font-family: "Montserrat Alternates", sans-serif;
    font-weight: 700;
    font-style: normal;
    position: relative;
    color: white;
    min-height: 100vh;
    line-height: 1.5em;
    }
.top img{
    width: 100%;
}
.titre {
    text-align: center;
    margin: 10px;
}
h1 {
    font-size: 23px;
    
    
}
.texteannonce {
    margin: 20px;
}

.texteannonce img {
    float: left;
    margin: 10px;
    width: 250px;
}

.presentation {
    margin: 15px;
}
.bottom img {
    width: 100%;
    margin-bottom: 0px;
    padding-bottom: 0px;
}
.texteannonce a img {
    width: 60px;
        
}

.texteannonce a {
    padding: 14px 16px;
    color: white;
    text-decoration: none;
    font-weight: 800;
        
}
.texteannonce a:hover {
    padding: 14px 16px;
    color: black;
    text-decoration: none;
    font-weight: 800;
        
}


    
    
    </style>
    <div class="bodyannonce">
        <div class="top">
            <img src="{{ asset('/images/bottom-header.gif') }}"></div>
            <div class="texteannonce">
                <div class="titre">
                    <h1>
                        {{ annonce.titre }}
                    </h1>
                </div>
                {% if annonce.thumbnail %}
                    <img src="{{ vich_uploader_asset(annonce, 'thumbnailFile') }}" alt="Photo de {{ annonce.titre }}">
                    {% endif %}
                    <div class="presentation">
                        {{ annonce.presentation | raw }}
                    </div>
                    
                       
                    </div>
                </div>
            {% endblock %}
            