{% extends 'base.html.twig' %}
{% block title " Toutes les émissions " %}
{% block body %}
    <style>
    .recherche {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        margin: 0%;
        padding: 0%;
        display: flex;
        flex-direction: column;
        font-weight: normal;
        font-style: normal;
        position: relative;
        min-height: 50vh;
        }
        strong {
            font-weight: 700 !important;
        }
        em {
            font-style: italic !important;
        }

    .top img{
        width: 100%;
    }

    .img {
        padding: 10px;
        float: left;
        
    }
    .imgbottom {
    width: 100%;
    display: block;
    margin: 0;
    padding: 0;
}
   
    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
            
    }
    a:hover {
    color: #E40039;
            
    }
    .texte {
        width: fit-content;
        color: white;
        margin: 20px;
    }
    .titre {
        padding: 10px;
        
    }
    .date {
        padding: 10px;
    }
    .cat {
        padding: 10px;
    }
  .descriptif-content {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: all 0.3s ease;
}

.descriptif-content.expanded {
  -webkit-line-clamp: unset;
}

.descriptif-toggle-btn {
  background: none;
  color: #E40039;
  font-weight: bold;
  border: none;
  cursor: pointer;
  margin-top: 0.5em;
}



    .url {
        text-align: right;
        padding: 10px;
    }
    .dl img {
        width: 40px;
        height: 40px;
        align-content: right;
    }
    .ecoute img {
        width: 40px;
        height: 40px;
        align-content: right;
    }
    .pagination {
        background-color: transparent;
        margin: auto;
        padding: 10px;
    }

    .pagination a:hover {
        padding: 14px 16px;
        color: grey;
        text-decoration: none;
        font-weight: 800;
    }
    
    
    
    </style>
    <div class="recherche">
        <div class="top">
            <img src="/images/bottom-header.gif">
        </div>
        <h1>
            Recherche d'émissions
        </h1>
        <div class="bottom">
            <img class="imgbottom" src="{{ asset('images/top-content-dechire-D.gif') }}">
        </div>
    </div>
            <div class="bodyemissions">
                <h1>
                    Toutes les émissions
                </h1>
                <div class="pagination">
                    {{ knp_pagination_render(pagination) }}
                </div>
                <div class="emissions">
                  
    {% include 'partials/list.html.twig' with {
        emissions: emissions,
        lastDiffusion: emissions.lastDiffusion
    } %}
                </div>
                <div class="pagination">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        {% endblock %}
        