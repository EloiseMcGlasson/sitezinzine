{% extends 'base.html.twig' %}

{% block title " Toutes les émissions " %}

{% block body %}

    <style>
    .bodyemissions {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        margin: 0%;
        padding: 0%;
        display: flex;
        flex-direction: column;
        
        font-weight: normal;
        font-style: normal;
        position: relative;
        min-height: 100vh;
        }
        .top img{
            width: 100%;
        }

    .table {
        width: 70%;
        margin: auto;
        background-color: black;
        
        }
    thead {
        
        text-align: center;
        
    }
    tr {
        display: flex;
        padding: 10px;
        }

    tr:nth-child(even){
        background-color: #454545
        }

    th {
    background-color: #04AA6D;
    color: white;
    
    }

    td {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: auto;

    }


    .table img {
        width: 150px;
        height: 150px;
        border-radius: 3px;
            
    }
    .img {
        padding: 10px;
        float: left;
        
    }
   
    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
            
    }
    a:hover {
        padding: 14px 16px;
        color: #E40039;
        text-decoration: none;
        font-weight: 800;
            
    }
    .texte {
        width: fit-content;
        color: white;
        margin: 20px;
    }
    .titre {
        padding: 10px;
        
    }
    .date {
        padding: 10px;
    }
    .cat {
        padding: 10px;
    }
    .descriptif {
        padding: 10px;
    }
    .url {
        text-align: right;
        padding: 10px;
    }
    .ecoute {
        
    }
    .dl img {
        width: 40px;
        height: 40px;
        align-content: right;
    }
    .ecoute img {
        width: 40px;
        height: 40px;
        align-content: right;
    }
    
    
    </style>

    <div class="bodyemissions">
        <div class="top">
            <img src="{{ asset('/images/bottom-header.gif') }}"></div>
            <table class="table">
                {# <thead>
                    <tr>
                        <th>
                            {{ knp_pagination_sortable(emissions, 'Titre', 'r.titre') }}
                        </th>

                    </tr>
                </thead> #}
                <tbody>
                    {% for emission in emissions %}
                        <tr>
                            <td>
                                <div class="img">
                                    {% if emission.thumbnail %}
                                        <img
                                        src="{{ vich_uploader_asset(emission, 'thumbnailFile') }}" alt="Photo de {{ emission.titre }}">
                                            {% elseif  emission.categorie.thumbnail %}

                                            <img
                                            src="{{ vich_uploader_asset(emission.categorie, 'thumbnailFile', 'App\\Entity\\Categories') }}" alt="Photo de {{ emission.titre }}">

                                                {% elseif  emission.theme.thumbnail %}
                                                <img src="{{ vich_uploader_asset(emission.theme, 'thumbnailFile', 'App\\Entity\\Theme') }}" alt="Photo de {{ emission.titre }}">
                                                {% endif %}
                                </div>
                                <div class="texte">
                                    <div class="titre">
                                        <a href="{{ path('emission.show', {id: emission.id }) }}">
                                            {{ emission.titre }}
                                        </a>
                                    </div>
                                    
                                    <div class="cat">
                                        <p>
                                            {{ emission.categorie.titre }}
                                        </p>
                                    </div>
                                    <div class="descriptif">
                                        <p>

                                            {{ emission.descriptif | raw }}
                                        </p>
                                    </div>
                                    <div class="date">
                                        {{ 'Dernière diffusion le ' ~ emission.datepub|date('d-m-Y') }}
                                    </div>
                                    
                                </div>
                                <div class='ecoute'>
                                
                                    <a href="{{ emission.url }}" target="_blank">
                                    <img src="{{ asset('/images/lecteur.png') }}" alt="écoutez l'émission">
                                    </a>
                                </div>
                                <div class='dl'>
                                
                                    <a href="{{ emission.url }}" download target="_blank">
                                    <img src="{{ asset('/images/telecharger.jpg') }}" alt="télécharger l'émission">
                                    </a>
                                </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        {{ knp_pagination_render(emissions) }}
                    </div>
                </tbody>
            {% endblock %}
            