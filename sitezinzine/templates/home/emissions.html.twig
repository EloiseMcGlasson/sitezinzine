{% extends 'base.html.twig' %}

{% block title " Toutes les émissions " %}

{% block body %}

    <style>
    .bodyemissions {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        margin: 0%;
        padding: 0%;
        display: flex;
        flex-direction: column;
        font-weight: normal;
        font-style: normal;
        position: relative;
        }

    .top img{
        width: 100%;
    }

    .img {
        padding: 10px;
        float: left;
        
    }
   
    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
            
    }
    a:hover {
        padding: 14px 16px;
        color: #E40039;
        text-decoration: none;
        font-weight: 800;
            
    }
    .texte {
        width: fit-content;
        color: white;
        margin: 20px;
    }
    .titre {
        padding: 10px;
        
    }
    .date {
        padding: 10px;
    }
    .cat {
        padding: 10px;
    }
    .descriptif {
        padding: 10px;
    }
    .url {
        text-align: right;
        padding: 10px;
    }
    .dl img {
        width: 40px;
        height: 40px;
        align-content: right;
    }
    .ecoute img {
        width: 40px;
        height: 40px;
        align-content: right;
    }
    .pagination {
        background-color: transparent;
        margin: auto;
        padding: 10px;
    }

    .pagination a:hover {
        padding: 14px 16px;
        color: grey;
        text-decoration: none;
        font-weight: 800;
    }
    .emissions {
        background-color: black;
        color: white;
        display: grid;
        margin: 80px;
        align-items: center; 
        }

        section {
            border: solid;
        border-collapse: collapse;
        display: grid;
        grid-template-columns: 1fr 4fr 1fr;
        }
    .col1 {
        width: 150px;
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: center;
       
    }
    .col1 img {
        width: 150px;
        padding: 10px;
    }
    .col2 {
       
    }
    .col3 {
        background-color: black;
    display: grid; 
    grid-template-columns: 1fr 1fr; 
    grid-template-rows: 1fr; 
    gap: 0px 0px; 
    grid-template-areas: 
      "ecoute dl"; 
    align-items: center;
    justify-self: center;
    }
    
    
    </style>

    <div class="bodyemissions">
        <div class="top">
            <img src="{{ asset('/images/bottom-header.gif') }}"></div>
            <div class="pagination">
                {{ knp_pagination_render(emissions) }}
            
            </div>
           
                <div class="emissions">
                    {% for emission in emissions %}
                    <section>
                        <div class="col1">
                            {% if emission.thumbnail %}
                                <img
                                src="{{ vich_uploader_asset(emission, 'thumbnailFile') }}" alt="Photo de {{ emission.titre }}">
                                    {% elseif  emission.categorie.thumbnail %}
                                    <img src="{{ vich_uploader_asset(emission.categorie, 'thumbnailFile', 'App\\Entity\\Categories') }}" alt="Photo de {{ emission.titre }}">
                                    {# {% elseif  emission.theme.thumbnail %}
                                        <img src="{{ vich_uploader_asset(emission.theme, 'thumbnailFile', 'App\\Entity\\Theme') }}" alt="Photo de {{ emission.titre }}">
                                    #}
                                    {% endif %}
                        </div>
                        <div class="col2">
                            <div class="titre">
                                <a href="{{ path('emission.show', {id: emission.id }) }}">
                                    {{ emission.titre }}
                                </a>
                            </div>

                            <div class="cat">
                                <p>
                                    {{ emission.categorie.titre }}
                                </p>
                            </div>
                            <div class="descriptif">
                                <p>

                                    {{ emission.descriptif | raw }}
                                </p>
                            </div>
                            <div class="date">
                                {{ 'Dernière diffusion le ' ~ emission.datepub| format_datetime ('medium', 'short', locale = 'fr') }}
                            </div>

                        </div>
                        <div class="col3">
                            <div class='ecoute'>

                                <a href="{{ emission.url }}" target="_blank">
                                    <img src="{{ asset('/images/lecteur.png') }}" alt="écoutez l'émission"></a>
                            </div>
                            <div class='dl'>

                                <a href="{{ emission.url }}" download target="_blank">
                                    <img src="{{ asset('/images/telecharger.jpg') }}" alt="télécharger l'émission"></a>
                            </div>
                        </div>
                    </section>
                    {% endfor %}

                </div>
                    <div class="pagination">
                        {{ knp_pagination_render(emissions) }}
                    </div>
            
                        {% endblock %}
                        