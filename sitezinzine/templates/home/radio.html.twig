{% extends 'base.html.twig' %}
{% block title %}
    {{ page.title }}
{% endblock %}
{% block body %}
    <div class="body">
        <div class="top">
            <img src="{{ asset('images/bottom-header.gif') }}"></div>
            <div class="editable">
                <div class="page-card">
                    {# Image de tÃªte optionnelle #}
                    {% if page.mainImageName %}
                        <div class="page-hero">
                            <img src="{{ asset('uploads/pages/' ~ page.mainImageName) }}" alt="{{ page.title }}"></div>
                        {% endif %}
                        <h1 class="page-title">
                            {{ page.title }}
                        </h1>
                        <div class="page-content">
                            {{ page.content|raw }}
                        </div>
                </div>
            </div>
    </div>
        {% endblock %}
        