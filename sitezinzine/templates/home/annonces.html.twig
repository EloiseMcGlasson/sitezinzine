{% extends 'base.html.twig' %}
{% block title %}
    Annonces des auditeurices !
{% endblock %}
{% block body %}

    <style>
    .bodyadminannonce {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        max-width: 100%;
        overflow-x: hidden;
        display: flex;
        flex-direction: column;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    .top img {
        width: 100%;
    }

    .annonce {
        background-color: transparent;
        color: white;
        display: grid;
        margin:  20px 40px;
        align-items: center;
        width: calc(100% - 80px); /* Largeur calculée en tenant compte des marges */
    }

    section {
        border: solid 1px #ccc;
        border-radius: 8px;
        display: grid;
        
        grid-template-columns: 150px auto 150px; /* Colonnes fixes pour le contenu */
        background-color: black;
        padding: 15px;
        transition: background-color 0.3s ease;
        min-width: 0; /* Empêche le dépassement */
    overflow: hidden; /* Cache le contenu qui dépasse */
    }

    section:hover {
        background-color: #333;
    }

    a {
        padding: 14px 16px;
        color: white;
        text-decoration: none;
        font-weight: 800;
    }

    a:hover {
        color: #E40039;
    }

    .col1 {
        width: 150px;
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 5px;
    }

    .col1 img {
        width: 150px;
        margin: 10px;
        padding: 10px;
        border-radius: 8px;
    }

    .col2 {
        padding: 10px;
    overflow: hidden; /* Cache le contenu qui dépasse */
    word-wrap: break-word; /* Permet la césure des mots longs */
    }

    .col2 p {
        margin: 5px 0;
        padding-left: 15px;
    }

    .col3 {
        width: 150px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    align-items: center;
    }

  

    .col3 form {
        display: inline;
    }

 
    .presentation {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.5;
        margin-top: 15px !important;
        color: #cecece;
    }
    em {
        font-style: italic !important;
    }
    strong {
        font-weight: 700 !important;
    }

   

    .annonces-row {
    display: grid;
    width: 100%;
    grid-template-columns: repeat(2, 1fr); /* Deux colonnes égales */
    gap: 20px; /* ✅ Espacement entre les annonces */
    margin-bottom: 20px;
    justify-content: center; /* ✅ Centre bien les annonces */
}



/* Responsive design amélioré */
@media (max-width: 1200px) {
    .annonces-row {
        grid-template-columns: 1fr;
    }
    
    section {
        grid-template-columns: 100px auto 100px;
    }
    
    .col1 {
        width: 100px;
    }
    
    .col1 img {
        width: 100%;
        max-width: 100px;
    }
    
    .col3 {
        width: 100px;
    }
}

@media (max-width: 768px) {
    .annonce {
        margin: 10px;
        width: calc(100% - 20px);
    }
    
    section {
        grid-template-columns: 1fr;
        grid-template-rows: auto auto auto;
    }
    
    .col1, .col2, .col3 {
        width: 100%;
    }
}
.create {
        margin: auto;
        padding: 20px;
    }
    .btn-create-annonce {
        text-decoration: none;
        padding: 5px;
        font-size: 1.2em;
        color: #000000;
        background-color: #ffffff;
        border-radius: 26px;
        -webkit-border-radius: 26px;
        -moz-border-radius: 26px;
        border: 4px solid black;
        box-shadow: 3px 7px 13px #444444;
        -webkit-box-shadow: 3px 7px 13px #444444;
        -moz-box-shadow: 3px 7px 13px #444444;
    }

    .btn-create-annonce:hover {
        padding: 5px;
        background-color: #E40039;
        color: #000000;
        border-radius: 24px;
        -webkit-border-radius: 24px;
        -moz-border-radius: 24px;
        box-shadow: 3px 7px 13px #777777;
        -webkit-box-shadow: 3px 7px 13px #777777;
        -moz-box-shadow: 3px 7px 13px #777777;
    }


    
</style>
  
    <div class="bodyadminannonce">
        <div class="top">
            <img src="{{ asset('/images/bottom-header.gif') }}"></div>
            <p class="create">
                <a class="btn-create-annonce" href="{{ path('annonce.create') }}">
                    Créer une nouvelle annonce
                </a>
            <article>
                <div class="annonce">
                    {% for annonce in annonces %}
                        {% if loop.index == 0 or loop.index % 2 == 1 %}
                            {# ✅ Ouvre une nouvelle ligne TOUS LES 2 ÉLÉMENTS #}
                            <div class="annonces-row">
                            {% endif %}
                            <section>
                                <div class="col1">
                                    {% if annonce.thumbnail %}
                                        <img src="{{ vich_uploader_asset(annonce, 'thumbnailFile') }}" alt="Photo de {{ annonce.titre }}">
                                        {% endif %}
                                    </div>
                                    <div class="col2">
                                        <p class="type">
                                            {{ annonce.type }}
                                        </p>
                                        <p class="titre">
                                            <a href="{{ path('annonce.show', {id: annonce.id }) }}">
                                                {{ annonce.titre }}
                                            </a>
                                        </p>
                                        <p class="orga">
                                            {{ annonce.organisateur }}
                                        </p>
                                        <p class="ville">
                                            {{ annonce.ville }}
                                        </p>
                                        <p class="departement">
                                            {{ annonce.departement }}
                                        </p>
                                        <p class="debutFin">
                                            {{ annonce.dateDebut|date('d/m/Y') }}
                                            -
                                            {{ annonce.dateFin|date('d/m/Y') }}
                                            -
                                            {{ annonce.horaire }}
                                        </p>
                                        <p class="presentation">
                                            {{ annonce.presentation | raw }}
                                        </p>
                                    </div>
                                    
                                        
                                       
                                    
                                        
                                    </section>
                                    {% if loop.index0 % 2 == 1 or loop.last %}
                                    {# ✅ Ferme la ligne après 2 annonces ou si c'est la DERNIÈRE annonce seule #}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </article>
                </div>
            {% endblock %}
            
    