{% extends 'base.html.twig' %}

{% block title %}Aide à l'écoute Radio Zinzine{% endblock %}

{% block body %}
<style>
    .bodyaide {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        margin: 0%;
        padding: 0%;
       display: flex;
       flex-direction: column;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 500;
        font-style: normal;
        font-size: 24px;
        position: relative;
min-height: 100vh;
    }
    .top img{
        width: 100%;
    }

    .aide-ecoute {
    max-width: 850px;
    margin: 3rem auto;
    padding: 2rem;
    background-color: #fff;
    color: #1C1C1A;
    font-family: 'Montserrat', sans-serif;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    line-height: 1.7;
}

.aide-ecoute h1 {
    font-size: 2rem;
    color: #E40039;
    text-align: center;
    margin-bottom: 1rem;
}

.aide-ecoute h2 {
    font-size: 1.4rem;
    color: #B81C61;
    text-align: center;
    margin-bottom: 2rem;
}

.aide-ecoute p {
    margin-bottom: 1.2rem;
    text-align: justify;
}

.aide-ecoute a {
    color: #E40039;
    font-weight: bold;
    text-decoration: none;
}

.aide-ecoute a:hover {
    text-decoration: underline;
}

.aide-ecoute img.zinzine-image {
    display: block;
    max-width: 100%;
    margin: 2rem auto 0 auto;
    border-radius: 6px;
    box-shadow: 0 3px 8px rgba(0,0,0,0.1);
}

/* Responsive */
@media screen and (max-width: 768px) {
    .aide-ecoute {
        padding: 1.5rem;
    }

    .aide-ecoute h1 {
        font-size: 1.6rem;
    }

    .aide-ecoute h2 {
        font-size: 1.2rem;
    }
}

</style>

<div class="body">
<div class="top">
            <img src="{{ asset('images/bottom-header.gif') }}"></div>
 <div class="editable">
                <div class="page-card">
                    {# Image de tête optionnelle #}
                    {% if page.mainImageName %}
                        <div class="page-hero">
                            <img src="{{ asset('uploads/pages/' ~ page.mainImageName) }}" alt="{{ page.title }}"></div>
                        {% endif %}
                        <h1 class="page-title">
                            {{ page.title }}
                        </h1>
                        <div class="page-content">
                            {{ page.content|raw }}
                        </div>
                </div>
            </div>


</div>
{% endblock %}