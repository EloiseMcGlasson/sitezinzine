RADIO ZINZINE, UNE RADIO LIBRE !
</div>
</div>

<script>
   document.addEventListener("DOMContentLoaded", function () {
    const audio = document.getElementById("audio-player");
    const playPauseButton = document.getElementById("play-pause");
    const progressBar = document.getElementById("progress-bar");
    const volumeControl = document.getElementById("volume-control");

    playPauseButton.addEventListener("click", function () {
        if (audio.paused) {
            audio.play();
            playPauseButton.classList.add("paused");
        } else {
            audio.pause();
            playPauseButton.classList.remove("paused");
        }
    });

    // ðŸŸ¢ Met Ã  jour la barre de progression en fonction du temps de lecture
    audio.addEventListener("timeupdate", function () {
        if (!isNaN(audio.duration)) {
            progressBar.value = (audio.currentTime / audio.duration) * 100;
        }
    });

    // ðŸŸ¢ Permet Ã  l'utilisateur de cliquer sur la barre de progression pour aller Ã  un moment prÃ©cis
    progressBar.addEventListener("input", function () {
        audio.currentTime = (progressBar.value / 100) * audio.duration;
    });

    // ðŸŸ¢ Gestion du volume
    volumeControl.addEventListener("input", function () {
        audio.volume = volumeControl.value;
    });

    // ðŸŸ¢ Remet la barre de progression Ã  0 quand l'audio se termine
    audio.addEventListener("ended", function () {
        progressBar.value = 0;
        playPauseButton.classList.remove("paused");
    });
});

</script>
