<style>
    @media screen and (min-width: 1024px) {
        
    
    .bodylast {
        background: linear-gradient(#E4013A, #B81C61);
        background-size: 100%;
        width: 100%;
        margin: 0%;
        padding: 0%;
        display: flex;
        flex-direction: column;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 700;
        font-style: normal;
        }

        .bodylast h1 {
        color:white;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 900;
        font-style: normal;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: 36pt;
    }
    .bodylast h3 {
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 300;
        font-style: normal;
        justify-content: center;
        text-align: center;
        color:white;
        font-size: 24pt;
    }

    article {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        padding: auto;
        margin:auto;
    }

    .carte {
        display: block;
        background-color: black;
        width: 350px;
        height: 300px;
        position: relative;
        flex-direction: row;
        margin:50px 100px; 
    }

    .categorie {
        
        background-color: #35BAC0;
        font-family: "Source Code Pro", monospace;
        font-optical-sizing: auto;
        font-weight: 600;
        font-size: 16px;
        font-style: normal;
        color: white;
        margin-left: 10px;
        margin-right: 10px;
        margin-top: -10px;
        padding: 5px;
        text-align: center;
    }

    .titre {
        font-family: "Montserrat", sans-serif;
        font-optical-sizing: auto;
        font-weight: 800;
        font-size: 25px;
        font-style: normal;
        color: white;
        text-wrap: balance;
        margin-left: 20px;
        margin-right: 20px;
        padding: 5px;
        -webkit-text-stroke-width: 0.5px;
        -webkit-text-stroke-color: black;
      
    }

    .date {
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 400;
        font-style: normal;
        font-size: 20px;
        color: white;
        margin-left: 20px;
    }


    .ecoute {
        position: absolute;
        bottom: 0;
        right: 0;
        margin-right: 5px;
        margin-bottom: 5px;
    }

    .ecoute img {
        width: 40px;
    }

    .bottom img{
        width: 100%;
        margin-bottom: 0px;
        padding-bottom: 0px;
        
    }

    .top img{
        width: 100%;
    }
    .titrelast {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .titrelast img {
        all: unset;
        width: 150px;
        margin-right: 10px;
        padding-bottom: 15px;
    }

    a {
        text-decoration: none;
    }
    .shadow {
        width: 70px;
        position: absolute;
        bottom: 0;
        right: 0;
        box-shadow: -8px 6px 20px 2px #000000;
    }

    .theme {
        background-color: #7E4095;
        font-family: "Source Code Pro", monospace;
        text-align: center;
        font-size: 17px;
        margin: 0px;
        padding: 10px;
        color: white;
        -webkit-text-stroke-width: 0.5px;
        -webkit-text-stroke-color: black;
    }

    .transparent {
        all: unset;
        width: 350px;
        height: 150px;
        position: absolute;
        bottom: 0;
        right: 0;
        max-height: 100%;
        background: rgba(163, 163, 142, 0.5) /* Grey background with 30% opacity */

    }
    }

    @media screen and (max-width: 767px) {
        .bodylast {
            background-color: #35BAC0;
        }
        
        }
    @media screen and (min-width: 767px) and (max-width:1023) {
        .bodylast {
            background-color: #7E4095;
        }
    }


  
    
    
</style>
<div class='bodylast'>
    <div>
        <div class="top">
            <img src="{{ asset('/images/bottom-header.gif') }}">
        </div>
            <div class="titrelast">
                <img src="{{ asset('/images/illu-radio-libre.gif') }}">
                    <div>
                        <h1>
                            ÉMISSIONS RÉCENTES
                        </h1>
                        <h3>
                            À réécouter
                        </h3>
                    </div>
            </div>
                <article>
                    {% for lastEmissionByTheme in lastEmissionsByTheme %}
                        {% if lastEmissionByTheme.thumbnail %}
                    
                            <div class='carte' style="background-image: url('https://localhost:8000/images/emissions/{{ lastEmissionByTheme.thumbnail }}');background-size: cover;background-repeat: no-repeat;">
                        {% elseif lastEmissionByTheme.categorie.thumbnail %}
                            <div class='carte' style="background-image: url('https://localhost:8000/images/categories/{{ lastEmissionByTheme.categorie.thumbnail }}');background-size: cover;background-repeat: no-repeat;">
                        {% elseif lastEmissionByTheme.theme.thumbnail | default ('') %}
                            <div class='carte' style="background-image: url('https://localhost:8000/images/theme/{{ lastEmissionByTheme.theme.thumbnail }}');background-size: cover;background-repeat: no-repeat;">
                         {% else %}
                         <div class='carte' style="background-image: url('https://localhost:8000/images/emissions/fondcarte.jpg');background-size: cover;background-repeat: no-repeat;">
                        {% endif %}
                    <a href="{{ path('emission.show', {id: lastEmissionByTheme.id }) }}">
                    <div class="theme">
                    <p>
                    {{ lastEmissionByTheme.theme.name | default ('') | upper }}
                    </p>
                
                    </div>
                    <div class="transparent">
                        
                                <div class='categorie'>
                                    <p>
                                        {{ lastEmissionByTheme.categorie.titre | upper }}
                                    </p>
                                </div>
                                <div class='titre'>
                                    <p>
                                        {{ lastEmissionByTheme.titre }}
                                    </p>
                                </div>
                                <div class='date'>
                                    <p>
                                        {{ "Le " ~ lastEmissionByTheme.datepub| format_datetime ('medium', 'short', locale = 'fr') }}
                                    </p>
                                </div>
                                <div class='ecoute'>
                                    <p>
                                        <a href="{{ lastEmissionByTheme.url }}">
                                        <img src="{{ asset('/images/lecteur.png') }}" alt="écoutez l'émission">
                                        </a>
                                    </p>
                                </div>
                            </a>
                        <div class="shadow"></div>
                    </div>
                </div>
                    {% endfor %}
                </article>
    </div>
                <img class="bottom" src="{{ asset('/images/top-content-dechire-D.gif') }}">
</div>
                