<style>
    .bodyEvenement {
        width: 100%;
        margin: 0%;
        padding: 0%;
       display: flex;
       flex-direction: column;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 700;
        font-style: normal;
        min-height: 100vh;
        
    
    }
    
    .bodyEvenement h1 {
        color:white;
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 900;
        font-style: normal;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: 36pt;
        color: #E40039;
    }
    .bodyEvenement h3 {
        font-family: "Montserrat Alternates", sans-serif;
        font-weight: 300;
        font-style: normal;
        justify-content: center;
        text-align: center;
        color:white;
        font-size: 24pt;
        color: #E40039;
        
    }
    
    .titreevenement {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    article.evenements {
        display: grid;
        grid-template-areas:
            "article1 article1"
            "article2 article3";
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        padding: 20px;
        margin: auto;
        max-width: 1400px;
    }
    
    
    .evenement:nth-child(1) {
        grid-area: article1;
        
    }
    
    .evenement:nth-child(2) {
        grid-area: article2;
    }
    
    .evenement:nth-child(3) {
        grid-area: article3;
    }
    
        .evenement {
            display: flex;
            flex-direction: row;
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
    
        .evenement:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }
    
        .evenement .top {
            flex: 1;
            max-width: 40%; /* L'image occupe 40% de la largeur */
        }
    
        .evenement .top img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    
        .evenement .bottom {
            position: relative; 
            flex: 2;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .evenement .bottom img {
    position: absolute;
    bottom: 10px;
    right: 10px;
    width: 50px; /* Ajustez cette valeur selon la taille souhaitée */
    height: auto;
    
    
}
    
        .evenement .date {
            font-family: "Montserrat Alternates", sans-serif;
            font-weight: 600;
            font-size: 14px;
            color: #E4013A;
        }
    
        .evenement .titre {
            font-family: "Montserrat Alternates", sans-serif;
            font-weight: 800;
            font-size: 18px;
            color: #333;
        }
    
        .evenement .presentation {
            font-family: "Montserrat Alternates", sans-serif;
            font-weight: 400;
            font-size: 14px;
            color: #666;
            line-height: 1.5;
            display: -webkit-box;
            -webkit-line-clamp: 10;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    
        @media screen and (max-width: 768px) {
            .titreevenement {
                flex-direction: column;
                text-align: center;
            }
    
            .titreevenement img {
                margin: 0 0 20px 0;
            }
    
            article {
                grid-template-areas:
                    "article1"
                    "article2"
                    "article3";
                grid-template-columns: 1fr;
            }
    
            .evenement {
                flex-direction: column;
            }
    
            .evenement .top {
                max-width: 100%;
            }
    
            .evenement .top img {
                height: 200px;
            }
    
            .evenement .bottom {
                padding: 15px;
            }
        }
    </style>
    
    <div class='bodyEvenement'>
    
        <div class="titreevenement">
            <img src="{{ asset('/images/illu-evenements.gif') }}">
                <div>
                    <h1>
                        ÉVÈNEMENTS
                    </h1>
                    <h3>
                        Des prochaines semaines
                    </h3>
                </div>
        </div>
        
        <article class="evenements">
            {% for evenement in evenements %}
            <div class="evenement evenement-{{ loop.index }}">
                <div class="top">
                    {% if evenement.thumbnail %}
                    <img src="{{ vich_uploader_asset(evenement, 'thumbnailFile') }}" alt="Photo de {{ evenement.titre }}">
                    {% endif %}
                </div>
                <div class="bottom">
                    <div class="date">
                        {{ "Le " ~ evenement.dateDebut|format_date('long', locale='fr') }} {{ evenement.horaire }}
                    </div>
                    <div class="titre">
                        {{ evenement.titre }}
                    </div>
                    <div class="presentation">
                        {{ evenement.presentation|raw }}
                    </div>
                    <div>
                    <a href="{{ path('showEvenement', {id: evenement.id }) }}">

                    <img src="{{ asset('/images/lire-la-suite.gif') }}"></div>
                </a>
                    
                </div>
            </div>
            {% endfor %}
        </article>
    </div>