<style>
  /* =========================
     Section full width (fond)
     ========================= */
  .evenements-section,
  .evenements-section *{
    box-sizing: border-box;
  }

  .evenements-section{
    width: 100%;
    background: #fff;
    font-family: "Montserrat Alternates", sans-serif;
    padding: 24px 0;
  }

  /* =========================
     Container interne
     ========================= */
  .bodyEvenement{
    width: 100%;
    margin: 0 auto;
    max-width: 1400px;
    padding: 0 60px;
    display: flex;
    flex-direction: column;
    min-height: auto;
  }

  /* =========================
     Header titre + illu (illu à gauche, titre responsive)
     ========================= */
.bodyEvenement .titreevenement{
  display: flex;
  align-items: center;
  gap: 18px;

  width: fit-content;        /* ✅ le bloc épouse son contenu */
  max-width: 100%;           /* sécurité */
  margin: 20px auto;         /* ✅ centrage horizontal réel */
}



  .bodyEvenement .titreevenement img{
    all: unset;
    display: block;
    width: 120px;
    max-width: 30vw;
    height: auto;
    flex: 0 0 auto;
  }

  .bodyEvenement .titreevenement .titrebloc{
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-width: 0;
    flex: 1;
  }

  .bodyEvenement h1{
    margin: 0;
    font-weight: 900;
    text-align: center;
    font-size: clamp(22px, 4vw, 42px);
    color: #E40039;
    line-height: 1.1;
    overflow-wrap: anywhere;
  }

  .bodyEvenement h3{
    margin: 6px 0 0 0;
    font-weight: 300;
    text-align: center;
    font-size: clamp(14px, 2.4vw, 28px);
    color: #E40039;
    line-height: 1.2;
    overflow-wrap: anywhere;
  }

  /* =========================
     Grid des évènements (desktop)
     1er évènement pleine largeur, puis 2 colonnes
     ========================= */
  .bodyEvenement article.evenements{
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 60px;
    padding: 20px 0 40px 0;
    margin: 0;
    width: 100%;
  }

  .bodyEvenement article.evenements .evenement:first-child{
    grid-column: 1 / -1;
  }

  /* =========================
     Carte évènement
     ========================= */
  .bodyEvenement .evenement{
    display: flex;
    flex-direction: row;
    background: #fff;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .bodyEvenement .evenement:hover{
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .bodyEvenement .evenement .top{
    flex: 1;
    max-width: 40%;
  }

  .bodyEvenement .evenement .top img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .bodyEvenement .evenement .bottom{
    position: relative;
    flex: 2;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .bodyEvenement .evenement .date{
    font-weight: 600;
    font-size: 14px;
    color: #E4013A;
  }

  .bodyEvenement .evenement .titre{
    font-weight: 800;
    font-size: 18px;
    color: #333;
    overflow-wrap: anywhere;
    word-break: break-word;
  }

  .bodyEvenement .evenement .presentation{
    font-weight: 400;
    font-size: 14px;
    color: #666;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 10;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* CTA */
  .bodyEvenement .evenement__cta{
    position: absolute;
    bottom: 10px;
    right: 10px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  .bodyEvenement .evenement__cta img{
    width: 50px;
    height: auto;
    display: block;
  }

  /* =========================
     Responsive
     ========================= */

  /* <= 1024px */
  @media (max-width: 1024px){
    .evenements-section{
      padding: 18px 0;
    }

    .bodyEvenement{
      padding: 0 24px;
      max-width: none;
    }

    .bodyEvenement article.evenements{
      gap: 28px;
      padding: 16px 0 28px 0;
    }
  }

  /* <= 768px : 1 colonne */
  @media (max-width: 768px){
    .bodyEvenement{
      padding: 0 16px;
    }

    .bodyEvenement .titreevenement{
      gap: 12px;
      padding: 14px 0;
    }

    .bodyEvenement .titreevenement img{
      width: 84px;
      max-width: 28vw;
    }

    .bodyEvenement article.evenements{
      grid-template-columns: 1fr;
      gap: 24px;
      padding: 12px 0 24px 0;
    }

    .bodyEvenement article.evenements .evenement:first-child{
      grid-column: auto;
    }

    .bodyEvenement .evenement{
      flex-direction: column;
    }

    .bodyEvenement .evenement .top{
      max-width: 100%;
    }

    .bodyEvenement .evenement .top img{
      height: 200px;
    }

    .bodyEvenement .evenement .bottom{
      padding: 15px;
      padding-bottom: 70px;
    }
  }

  /* Landscape */
  @media (max-width: 1024px) and (orientation: landscape){
    .bodyEvenement article.evenements{
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .bodyEvenement .evenement{
      flex-direction: row;
    }

    .bodyEvenement .evenement .top{
      max-width: 45%;
    }

    .bodyEvenement .evenement .top img{
      height: 100%;
      min-height: 140px;
    }

    .bodyEvenement .evenement .presentation{
      -webkit-line-clamp: 6;
    }

    .bodyEvenement .evenement .bottom{
      padding-bottom: 60px;
    }
  }

  /* Ultra étroit */
  @media (max-width: 320px){
    .bodyEvenement .titreevenement{
      flex-wrap: wrap;
      justify-content: center;
      text-align: center;
    }

    .bodyEvenement h1,
    .bodyEvenement h3{
      text-align: center;
    }

    .bodyEvenement .titreevenement img{
      width: 72px;
      max-width: 40vw;
    }
  }
</style>

<div class="evenements-section">
  <div class="bodyEvenement">
    <div class="titreevenement">
      <img src="/images/illu-evenements.gif" alt="">
      <div class="titrebloc">
        <h1>ÉVÈNEMENTS</h1>
        <h3>Des prochaines semaines</h3>
      </div>
    </div>

    <article class="evenements">
      {% for evenement in evenements %}
        <div class="evenement">
          <div class="top">
            {% if evenement.thumbnail %}
              <img src="{{ vich_uploader_asset(evenement, 'thumbnailFile') }}" alt="Photo de {{ evenement.titre }}">
            {% endif %}
          </div>

          <div class="bottom">
            <div class="date">
              {{ "Le " ~ evenement.dateDebut|format_date('long', locale='fr') }} {{ evenement.horaire }}
            </div>

            <div class="titre">
              {{ evenement.titre }}
            </div>

            <div class="presentation">
              {{ evenement.presentation|raw }}
            </div>

            <a class="evenement__cta" href="{{ path('showEvenement', {id: evenement.id }) }}">
              <img src="/images/lire-la-suite.gif" alt="Lire la suite : {{ evenement.titre }}">
            </a>
          </div>
        </div>
      {% endfor %}
    </article>
  </div>
</div>
