<style>


    .bodyondes {
        background: white;
        background-size: 100%;
        margin: 0%;
        padding: 0%;
        
        width: 100%;
        position: relative;
        
    }

    .bodyondes h1, h3 {
      color: #7E4093;
      justify-content: center;
      align-items: center;
      text-align: center;
    }
    .bodyondes h1 {
      font-size: 36pt;
      font-weight: 900;
    }

    .bodyondes h3 {
      font-family: "Montserrat Alternates", sans-serif;
      font-weight: 300;
      font-style: normal;
      justify-content: center;
      text-align: center;
      font-size: 24pt;
  }

    .ondestitres {
      display: flex;
      align-items: center;
      justify-content: center;

    }
    .ondestitres img {
      width: 150px;
      margin-right: 10px;
      padding-bottom: 15px;
    }

    .carousel {
      width: 250px;
      height: 300px;
      margin-bottom: 50px;
      margin-top: 50px;
      border:solid;
      border-color: black;
    }

  

    .date_carousel {
      font-family: "Montserrat Alternates", sans-serif;
      font-size: 30px;
    }

    .titre_carousel {
      font-family: "Montserrat", sans-serif;
      font-weight: 900;
      font-size: 30px;
    }

    .categorie_carousel {
        font-family: "Source Code Pro", monospace;
        font-weight: 600;
        font-size: 16px;
        background-color: #35BAC0;
    }
 
</style>
<div class="bodyondes">
  <div class="ondestitres">
    <img src="{{ asset('/images/illu-ondes.gif') }}">
      <div>
        <h1>
          SUR LES ONDES
        </h1>
        <h3>
          La programmation d'aujourd'hui
        </h3>
      </div>
    </div>
    <div class="carrousel">
      <div class="glide">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            {% for lastEmission in lastEmissions %}
            <li class="glide__slide">
              <div class="carousel">
                            
                            <div class='date_carousel'>
                              <p>
                                {{ 'Ã  ' ~ lastEmission.datepub| format_datetime ('none', 'short', locale = 'fr') }}
                              </p>
                            </div>
                            <div class='titre_carousel'>
                              <p>
                                {{ lastEmission.titre | upper }}
                              </p>
                            </div>
                            <div class='categorie_carousel'>
                            <p>
                              {{ lastEmission.categorie.titre | upper }}
                            </p>
                          </div>
                     
                      
              {% endfor %}
            </li>
          </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
          <button class=" glide__arrow glide__arrow--right" data-glide-dir=">
            ">next
          </button>
        </div>
        </div>
      </div>
    </div>
  </div>
        <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
        <script>

  const config = {
    type: "carousel",
    perView:6,
    gap: 0
  }
  new Glide('.glide', config ).mount()
</script>
        