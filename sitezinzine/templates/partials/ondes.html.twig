<style>


  .bodyondes {
    background: white;
    margin: 0 auto;
    max-width: 1400px; /* Limite la largeur maximale */
    padding: 0 100px; /* Augmente le padding pour les flèches */
    position: relative;
    overflow: hidden;
      
  }

  .bodyondes h1, h3 {
    color: #7E4093;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  .bodyondes h1 {
    font-size: 36pt;
    font-weight: 900;
  }

  .bodyondes h3 {
    font-family: "Montserrat Alternates", sans-serif;
    font-weight: 300;
    font-style: normal;
    justify-content: center;
    text-align: center;
    font-size: 24pt;
}

  .ondestitres {
    display: flex;
    align-items: center;
    justify-content: center;

  }
  .ondestitres img {
    width: 150px;
    margin-right: 10px;
    padding-bottom: 15px;
  }

  .carousel {
    background: white; /* Changement du fond en blanc */
    width: 250px;
    height: 400px;
    margin-bottom: 50px;
    margin-top: 50px;
    border: 1px solid #ddd;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: all 0.3s ease;
    transform: scale(0.95); /* Réduit légèrement toutes les slides */

  }

  .glide__slide {
    user-select: none; /* Empêche la sélection de texte pendant le glissement */
    -webkit-user-drag: none; /* Empêche le drag par défaut des images */
}
/* Style pour la slide active */
.glide__slide--active .carousel {
  background: linear-gradient(#7E4093, #6B3B7F);
  transform: scale(1.05); /* Agrandit la slide active */
  box-shadow:  0 15px 30px rgba(126, 64, 147, 0.3); /* Ajoute une ombre portée */
  z-index: 2; /* Met la slide active au premier plan */
  transition: all 0.3s ease;

}

/* Adaptation du texte pour la slide active */
.glide__slide--active .titre_carousel a,
.glide__slide--active .date_carousel p,
.glide__slide--active .categorie_carousel p {
    color: white;
}

.image_carousel {
    width: 100%;
    height: 200px; /* Hauteur fixe pour l'image */
    overflow: hidden;
}

.image_carousel img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

/* Effet hover sur l'image */
.carousel:hover .image_carousel img {
    transform: scale(1.05);
}
  .date_carousel {
    font-family: "Montserrat Alternates", sans-serif;
    font-size: 24px;
    padding: 10px 15px 0; /* Ajustement du padding */
    color: #333;
    margin-top: auto; /* Pousse l'élément vers le bas */
  }

  .titre_carousel {
    font-family: "Montserrat", sans-serif;
    font-weight: 900;
    font-size: 20px;
    padding:  0 15px 15px;
    text-wrap: balance;
    text-align: left;
  }

  .categorie_carousel {
      font-family: "Source Code Pro", monospace;
      font-weight: 600;
      font-size: 16px;
      background-color: #35BAC0;
      padding: 10px;
      text-wrap: balance;
      height: 60px; /* Hauteur fixe */
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 0;
  }

  .titre_carousel p {
    margin: 0;
    text-align: left;
}

.titre_carousel a {
    padding: 0; /* Supprime le padding qui peut influencer l'alignement */
    color: black;
    text-decoration: none;
    font-weight: 800;
    display: block; /* Assure que le lien prend toute la largeur */
    text-align: left;
}

.titre_carousel a:hover {
    color: white;
    text-decoration: none;
    font-weight: 800;
    padding: 0; /* Garde la cohérence avec l'état normal */
}

  .date_carousel p
 {
    margin: 0;
}

  .categorie_carousel p {
    margin: 0;
    line-height: 1.2;
}
.glide__track {
    cursor: grab;
    position: relative;
    z-index: 1;
}

.glide__track:active {
    cursor: grabbing;
}
  .glide__arrows {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    border: none;
    pointer-events: none; 
}

.glide__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    z-index: 10;
    outline: none; /* Supprime le contour au focus */
    cursor: pointer;
    pointer-events: auto;
}
/* Pour assurer la compatibilité avec tous les navigateurs */
.glide__arrow:focus {
    outline: none;
}

.glide__arrow::-moz-focus-inner {
    border: 0;
}

.glide__arrow--left {
    left: -110px; /* Rapproche la flèche gauche */
    border: none;
}

.glide__arrow--right {
    right: -80px; /* Rapproche la flèche droite */
}

.glide__arrow:hover {
    transform: translateY(-50%) scale(1.1);
}

.glide__arrows img {
    width: 80px; /* Taille réduite des flèches */
    height: auto;
}
.glide__arrow img {
    width: 80px;
    height: auto;
    pointer-events: none; /* Empêche les problèmes de clic sur l'image */
}
  .glide {
    position: relative;
    margin: 0 auto; /* Réduit les marges latérales */
    padding: 0;
    width: 100%;
  }

  .titre_carousel a {
  padding: 14px 16px;
  color: black;
  text-decoration: none;
  font-weight: 800;
      
}

.titre_carousel a:hover {
  padding: 14px 16px;
  color: white;
  text-decoration: none;
  font-weight: 800;
      
}

@media screen and (max-width: 1200px) {
  .carousel {
    width: 220px;
    height: 280px;
    transform: scale(0.95);
}

.glide__slide--active .carousel {
    transform: scale(1.05);
}
.top-image {
  height: 25px;
}
    .date_carousel {
        font-size: 20px;
    }
    
    .titre_carousel {
        font-size: 18px;
    }
    .glide {
      margin: 0px 80px;
  }
  
  .glide__arrow--left {
      left: -70px;
  }
  
  .glide__arrow--right {
      right: -70px;
  }
  
  .glide__arrows img {
      width: 60px;
  }
}

@media screen and (max-width: 768px) {
  .carousel {
    width: 200px;
    height: 260px;
    transform: scale(0.95);
}
.top-image {
  height: 20px;
}
.glide__slide--active .carousel {
    transform: scale(1.05);
}
    .glide {
        margin: 0px 50px;
    }
    
    .glide__arrow--left {
        left: -40px;
    }
    
    .glide__arrow--right {
        right: -40px;
    }
    
    .glide__arrows img {
        width: 40px;
    }
}

</style>
<div class="bodyondes">
<div class="ondestitres">
  <img src="{{ asset('/images/illu-ondes.gif') }}">
    <div>
      <h1>
        SUR LES ONDES
      </h1>
      <h3>
        La programmation d'aujourd'hui
      </h3>
    </div>
  </div>
    <div class="glide">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides">
          {% for lastEmission in lastEmissions %}
          <li class="glide__slide">
            <div class="carousel">
            <div class='image_carousel'>
            {% if lastEmission.thumbnail %}
                <img src="{{ vich_uploader_asset(lastEmission, 'thumbnailFile') }}" 
                     alt="{{ lastEmission.titre }}">
            {% elseif lastEmission.categorie.thumbnail %}
                <img src="{{ vich_uploader_asset(lastEmission.categorie, 'thumbnailFile') }}" 
                     alt="{{ lastEmission.categorie.titre }}">
            {% else %}
                <img src="{{ asset('images/default.jpg') }}" 
                     alt="Image par défaut">
            {% endif %}
        </div>
                          <div class='date_carousel'>
                            <p>
                              {{ 'à ' ~ lastEmission.datepub| format_datetime ('none', 'short', locale = 'fr') }}
                            </p>
                          </div>
                          <div class='titre_carousel'>
                            <p>
                              <a href="{{ path('emission.show', {id: lastEmission.id }) }}">
                              {{ lastEmission.titre | upper }}
                              </a>
                            </p>
                          </div>
                          <div class='categorie_carousel'>
                          <p>
                            {{ lastEmission.categorie.titre | upper }}
                          </p>
                        </div>
                   
                    
            {% endfor %}
          </li>
        </ul>
      </div>
      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><img src="{{ asset('/images/previous.png') }}"></button>
        <button class=" glide__arrow glide__arrow--right" data-glide-dir=">
          "><img src="{{ asset('/images/next.png') }}">
        </button>
      </div>
      </div>
    </div>
  </div>
</div>
      <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
      <script>
        const config = {
            type: "carousel",
            perView: 4, // Nombre de slides visibles
            gap: 20, // Espace entre les slides
            animationDuration: 800,
            autoplay: false, // Désactive le défilement automatique
            hoverpause: true,
            bound: true, // Empêche le défilement infini
            breakpoints: {
                1024: {
                    perView: 3
                },
                768: {
                    perView: 2
                },
                480: {
                    perView: 1
                }
            }
        }
        
        new Glide('.glide', config).mount()
        </script>
      