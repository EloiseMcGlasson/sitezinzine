<style>
  .bodyondes {
    background: white;
    margin: 0 auto;
    max-width: 1400px;
    padding: 0 100px;
    position: relative;
    overflow: hidden;
  }
  
  .bodyondes h1,
  .bodyondes h3 {
    color: #7E4093;
    text-align: center;
    justify-content: center;
    align-items: center;
  }
  
  .bodyondes h1 {
    font-size: 36pt;
    font-weight: 900;
  }
  
  .bodyondes h3 {
    font-family: "Montserrat Alternates", sans-serif;
    font-weight: 300;
    font-style: normal;
    font-size: 24pt;
  }

  .bodyondes .ondestitres {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bodyondes .ondestitres img {
    width: 150px;
    margin-right: 10px;
    padding-bottom: 15px;
  }

  .bodyondes .carousel {
    background: white;
    width: 250px;
    height: 400px;
    margin: 50px 0;
    border: 1px solid #ddd;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: all 0.3s ease;
    transform: scale(0.95);
  }
  
  .bodyondes .glide__slide {
    user-select: none;
    -webkit-user-drag: none;
  }

  .bodyondes .glide__slide--active .carousel {
    background: linear-gradient(#7E4093, #6B3B7F);
    transform: scale(1.05);
    box-shadow: 0 15px 30px rgba(126, 64, 147, 0.3);
    z-index: 2;
  }

  .bodyondes .glide__slide--active .titre_carousel a,
  .bodyondes .glide__slide--active .date_carousel p,
  .bodyondes .glide__slide--active .categorie_carousel p {
    color: white;
  }

  .bodyondes .image_carousel {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .bodyondes .image_carousel img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .bodyondes .carousel:hover .image_carousel img {
    transform: scale(1.05);
  }

  .bodyondes .date_carousel,
  .bodyondes .titre_carousel,
  .bodyondes .categorie_carousel {
    padding: 10px 15px;
  }

  .bodyondes .date_carousel {
    font-family: "Montserrat Alternates", sans-serif;
    font-size: 24px;
    color: #333;
    margin-top: auto;
  }

  .bodyondes .titre_carousel {
    font-family: "Montserrat", sans-serif;
    font-weight: 900;
    font-size: 20px;
    text-wrap: balance;
    text-align: left;
  }


.bodyondes .titre_carousel a {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
color: black;
    text-decoration: none;
    font-weight: 800;
    text-align: left;
    padding: 0 16px;
  word-break: break-word;         /* ðŸ‘ˆ casse les mots longs */
  overflow-wrap: anywhere;        /* ðŸ‘ˆ autorise les sauts Ã  n'importe quel endroit */
  line-height: 1.5;
  max-height: calc(1.5em * 2);
  transition: color 0.3s ease; /* transition douce pour la couleur */
}


  .bodyondes .date_carousel p,
  .bodyondes .categorie_carousel p {
    margin: 0;
    line-height: 1.2;
  }
  


  .bodyondes .titre_carousel a:hover {
    color: #E4013A;
  }

  .bodyondes .categorie_carousel {
    font-family: "Source Code Pro", monospace;
    font-weight: 600;
    font-size: 16px;
    background-color: #35BAC0;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bodyondes .glide__track {
    cursor: grab;
    position: relative;
    z-index: 1;
  }

  .bodyondes .glide__track:active {
    cursor: grabbing;
  }

  .bodyondes .glide__arrows {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
  }

  .bodyondes .glide__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    z-index: 10;
    cursor: pointer;
    pointer-events: auto;
  }

  .bodyondes .glide__arrow:focus,
  .bodyondes .glide__arrow::-moz-focus-inner {
    outline: none;
    border: 0;
  }

  .bodyondes .glide__arrow--left {
    left: -110px;
  }

  .bodyondes .glide__arrow--right {
    right: -80px;
  }

  .bodyondes .glide__arrow:hover {
    transform: translateY(-50%) scale(1.1);
  }

  .bodyondes .glide__arrows img,
  .bodyondes .glide__arrow img {
    width: 80px;
    height: auto;
    pointer-events: none;
  }

  .bodyondes .glide {
    position: relative;
    margin: 0 auto;
    padding: 0;
    width: 100%;
  }
  
  /* Responsive */
  @media screen and (max-width: 1200px) {
    .bodyondes .carousel {
      width: 220px;
      height: 280px;
    }

    .bodyondes .top-image {
      height: 25px;
    }
  
    .bodyondes .date_carousel {
      font-size: 20px;
    }

    .bodyondes .titre_carousel {
      font-size: 18px;
    }

    .bodyondes .glide {
      margin: 0 80px;
    }

    .bodyondes .glide__arrow--left {
      left: -70px;
    }

    .bodyondes .glide__arrow--right {
      right: -70px;
    }

    .bodyondes .glide__arrows img {
      width: 60px;
    }
  }
  
  @media screen and (max-width: 768px) {
    .bodyondes .carousel {
      width: 200px;
      height: 260px;
    }

    .bodyondes .top-image {
      height: 20px;
    }

    .bodyondes .glide {
      margin: 0 50px;
    }

    .bodyondes .glide__arrow--left {
      left: -40px;
    }

    .bodyondes .glide__arrow--right {
      right: -40px;
    }

    .bodyondes .glide__arrows img {
      width: 40px;
    }
  }
  </style>

