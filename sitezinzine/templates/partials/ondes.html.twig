<style>
/* =========================
   Section full width (fond blanc)
   ========================= */
.ondes-section,
.ondes-section *{
  box-sizing: border-box;
}

.ondes-section{
  width: 100%;
  background: #fff; /* ✅ les bords restent blancs */
  font-family: "Montserrat Alternates", sans-serif;
}

/* =========================
   Container principal (contenu centré)
   ========================= */
.bodyondes{
  margin: 0 auto;
  max-width: 1400px;
  padding: 0 100px;
  position: relative;
}

/* =========================
   Titres (même logique que Évènements)
   ========================= */
.bodyondes .ondestitres{
  display: flex;
  align-items: stretch;      /* image = hauteur du bloc titre */
  justify-content: center;
  gap: 32px;
  padding: 20px 0;
}

.bodyondes .ondestitres img{
  display: block;
  height: 100%;
  max-height: 140px;
  width: auto;
  object-fit: contain;
}

.bodyondes .ondestitres > div{
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.bodyondes h1{
  margin: 0;
  font-weight: 900;
  color: #7E4093;
  text-align: left;
  line-height: 1.05;
  font-size: clamp(22px, 5vw, 42px);
}

.bodyondes h3{
  margin: 8px 0 0 0;
  font-weight: 300;
  color: #7E4093;
  text-align: left;
  line-height: 1.15;
  font-size: clamp(14px, 3vw, 26px);
}

/* =========================
   Glide container
   ========================= */
.bodyondes .glide{
  position: relative;
  width: 100%;
  margin: 0 auto;
  overflow: visible; /* ✅ un seul overflow, explicite */
}

.bodyondes .glide__track{
  cursor: grab;
}

.bodyondes .glide__track:active{
  cursor: grabbing;
}

.bodyondes .glide__slide{
  user-select: none;
  -webkit-user-drag: none;
}

/* =========================
   Carte carousel
   ========================= */
.bodyondes .carousel{
  width: 250px;
  height: 400px;
  margin: 50px 0;
  background: #fff;
  border-radius: 12px;
  border: 1px solid #ddd;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  transform: scale(0.95);
}

.bodyondes .glide__slide--active .carousel{
  background: linear-gradient(#7E4093, #6B3B7F);
  transform: scale(1.05);
  box-shadow: 0 15px 30px rgba(126, 64, 147, 0.3);
}

/* =========================
   Image
   ========================= */
.bodyondes .image_carousel{
  width: 100%;
  height: 200px;
  overflow: hidden;
}

.bodyondes .image_carousel img{
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* =========================
   Textes
   ========================= */
.bodyondes .date_carousel,
.bodyondes .titre_carousel,
.bodyondes .categorie_carousel{
  padding: 10px 15px;
}

.bodyondes .date_carousel{
  font-size: 20px;
  font-weight: 600;
  color: #333;
}

.bodyondes .titre_carousel a{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-decoration: none;
  font-weight: 800;
  color: #000;
  line-height: 1.5;
  word-break: break-word;
  overflow-wrap: anywhere;
}

.bodyondes .glide__slide--active .titre_carousel a,
.bodyondes .glide__slide--active .date_carousel,
.bodyondes .glide__slide--active .categorie_carousel{
  color: #fff;
}

.bodyondes .categorie_carousel{
  background: #35BAC0;
  font-family: "Source Code Pro", monospace;
  font-weight: 600;
  font-size: 16px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* =========================
   Flèches (desktop uniquement)
   ========================= */
.bodyondes .glide__arrows{
  position: absolute;
  inset: 0;
  pointer-events: none;
}

.bodyondes .glide__arrow{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  cursor: pointer;
  pointer-events: auto;
}

.bodyondes .glide__arrow--left{ left: -80px; }
.bodyondes .glide__arrow--right{ right: -80px; }

.bodyondes .glide__arrow img{
  width: 70px;
}

/* =========================
   Responsive
   ========================= */

/* <= 1024px */
@media (max-width: 1024px){
  .bodyondes{
    padding: 0 40px;
  }

  .bodyondes h1{ font-size: clamp(20px, 4.2vw, 34px); }
  .bodyondes h3{ font-size: clamp(13px, 2.6vw, 20px); }

  .bodyondes .carousel{
    width: 220px;
    height: 320px;
  }

  .bodyondes .glide__arrow--left{ left: -40px; }
  .bodyondes .glide__arrow--right{ right: -40px; }
}

/* <= 768px : mobile */
@media (max-width: 768px){
  .bodyondes{
    padding: 0 16px;
  }

  .bodyondes h1{ font-size: clamp(18px, 6vw, 28px); }
  .bodyondes h3{ font-size: clamp(12px, 3.8vw, 16px); }

  .bodyondes .ondestitres{
    gap: 16px;
  }

  .bodyondes .ondestitres img{
    max-height: 90px;
  }

  .bodyondes .carousel{
    width: min(320px, 78vw);
    height: 260px;
    margin: 24px 0;
  }

  /* flèches désactivées en mobile */
  .bodyondes .glide__arrows{
    display: none;
  }
}

/* Mobile landscape */
@media (max-width: 900px) and (orientation: landscape){
  .bodyondes .carousel{
    height: 240px;
  }

  .bodyondes .image_carousel{
    height: 120px;
  }

  .bodyondes .categorie_carousel{
    height: 46px;
    font-size: 14px;
  }
}

/* Très petit */
@media (max-width: 420px){
  .bodyondes h1{ font-size: clamp(16px, 7vw, 24px); }
  .bodyondes h3{ font-size: clamp(12px, 4.2vw, 14px); }
}
</style>

<div class="ondes-section">
  <div class="bodyondes">
    <div class="ondestitres">
      <img src="/images/illu-ondes.gif" alt="">
      <div>
        <h1>SUR LES ONDES</h1>
        <h3>La programmation d'aujourd'hui</h3>
      </div>
    </div>

    <div class="glide" data-controller="carousel">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides">
          {% for row in lastEmissions %}
            {% set emission = row.emission %}
            {% set diffusion = row.diffusion %}

            <li class="glide__slide">
              <div class="carousel">
                <div class="image_carousel">
                  {% set imagePathEmission = vich_uploader_asset(emission, 'thumbnailFile') %}
                  {% set imagePathCategorie = vich_uploader_asset(emission.categorie, 'thumbnailFile') %}

                  {% if imagePathEmission %}
                    <img src="{{ imagePathEmission }}" alt="{{ emission.titre }}">
                  {% elseif imagePathCategorie %}
                    <img src="{{ imagePathCategorie }}" alt="{{ emission.categorie.titre }}">
                  {% else %}
                    <img src="{{ asset('uploads/images/emission-zinzine.jpg') }}" alt="Image par défaut">
                  {% endif %}
                </div>

                <div class="date_carousel">
                  <p>{{ diffusion | format_datetime('none', 'short', locale='fr') }}</p>
                </div>

                <div class="titre_carousel">
                  <p>
                    <a href="{{ path('emission.show', { id: emission.id }) }}">
                      {{ emission.titre | upper }}
                    </a>
                  </p>
                </div>

                <div class="categorie_carousel">
                  <p>{{ emission.categorie.titre | upper }}</p>
                </div>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
          <img src="/images/previous.png" alt="Précédent">
        </button>

        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
          <img src="/images/next.png" alt="Suivant">
        </button>
      </div>
    </div>
  </div>
</div>
