# üß± STAGE 1 : build avec Composer
FROM php:8.3-cli AS composer_build

RUN apt-get update && apt-get install -y \
    libicu-dev zip git unzip libzip-dev && \
    docker-php-ext-install intl pdo pdo_mysql zip && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

WORKDIR /app
COPY . .

ARG APP_ENV=prod
ENV APP_ENV=${APP_ENV}

RUN composer install --no-dev --optimize-autoloader


# üé® STAGE 2 : compilation des assets (Stimulus, Webpack Encore)
FROM node:18 AS frontend_build

WORKDIR /app

# Copie des fichiers n√©cessaires au build
COPY package.json yarn.lock webpack.config.js ./
COPY assets ./assets

# Installe les d√©pendances front
RUN yarn install --frozen-lockfile

# Compile les assets (production = minifi√©)
ENV NODE_ENV=production
RUN yarn build



# üèÅ STAGE 3 : image finale de production
FROM php:8.3-apache

ARG APP_ENV=prod
ENV APP_ENV=${APP_ENV}

# Installation des extensions n√©cessaires
RUN apt-get update && apt-get install -y \
    libicu-dev zip git unzip libzip-dev && \
    docker-php-ext-install intl pdo pdo_mysql zip && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Active mod_rewrite pour Symfony
RUN a2enmod rewrite

# Apache config
COPY ./docker/prod/apache/apache.conf /etc/apache2/sites-available/000-default.conf

WORKDIR /var/www/html

# Code Symfony
COPY . .

# Vendors PHP depuis le container de build
COPY --from=composer_build /app/vendor ./vendor

# Assets Webpack compil√©s
COPY --from=frontend_build /app/public/build ./public/build
COPY --from=frontend_build /app/public/build/manifest.json ./public/build/manifest.json

# Fix permissions et utilisateur non-root
RUN addgroup --system app && adduser --system --ingroup app appuser && \
    mkdir -p var && chown -R www-data:www-data var && \
    chown -R appuser:app /var/www/html

# Entrypoint personnalis√© (si besoin de migrations, etc)
COPY docker/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

USER appuser

ENTRYPOINT ["entrypoint.sh"]
CMD ["apache2-foreground"]

